@using EcommerceCoza.BLL.ViewModels
@model CategoryUpdateViewModel

@{
    ViewData["Title"] = "Edit Category";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="main-content">
    <div class="main-content-inner">
        <div class="main-content-wrap">
            <div class="flex items-center flex-wrap justify-between gap20 mb-27">
                <h3 style="font-size: 28px;">Edit Category</h3>
                <ul class="breadcrumbs flex items-center flex-wrap justify-start gap10">
                    <li>
                        <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
                            <div class="text-tiny" style="font-size: 14px;">Dashboard</div>
                        </a>
                    </li>
                    <li><i class="icon-chevron-right"></i></li>
                    <li>
                        <a asp-area="Admin" asp-controller="Category" asp-action="Index">
                            <div class="text-tiny" style="font-size: 14px;">Categories</div>
                        </a>
                    </li>
                    <li><i class="icon-chevron-right"></i></li>
                    <li><div class="text-tiny" style="font-size: 14px;">Edit</div></li>
                </ul>
            </div>

            <div class="wg-box">
                <form asp-area="Admin"
                      asp-controller="Category"
                      asp-action="Edit"
                      method="post"
                      enctype="multipart/form-data">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Id" />

                    <div class="mb-4">
                        <label asp-for="Name" class="form-label" style="font-size: 18px; font-weight: 600;"></label>
                        <input asp-for="Name" class="form-control" style="font-size: 16px; padding: 12px;" />
                        <span asp-validation-for="Name" class="text-danger" style="font-size: 14px;"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Description" class="form-label" style="font-size: 18px; font-weight: 600;"></label>
                        <textarea asp-for="Description" class="form-control" rows="4" style="font-size: 16px; padding: 12px;"></textarea>
                        <span asp-validation-for="Description" class="text-danger" style="font-size: 14px;"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="ImageFile" class="form-label" style="font-size: 18px; font-weight: 600;">Image</label>
                        <input asp-for="ImageFile" type="file" class="form-control" style="font-size: 16px; padding: 12px;" />
                        <span asp-validation-for="ImageFile" class="text-danger" style="font-size: 14px;"></span>

                        @if (!string.IsNullOrEmpty(Model.ImageName))
                        {
                            <div class="mt-3">
                                <div style="font-size: 16px; margin-bottom: 8px;">Current image:</div>
                                <img src="~/images/collections/@Model.ImageName"
                                     alt="@Model.Name"
                                     style="width:120px; height:120px; object-fit:cover; border-radius:8px;"
                                     onerror="this.src='/assets/images/no-image.png'" />
                            </div>
                        }

                    </div>

                    <div class="d-flex gap-3 mt-5">
                        <button type="submit" class="btn btn-lg btn-primary" style="font-size: 18px; padding: 12px 30px;">
                            <i class="icon-save me-2"></i>Save Changes
                        </button>
                        <a asp-area="Admin"
                           asp-controller="Category"
                           asp-action="Index"
                           class="btn btn-lg btn-secondary" style="font-size: 18px; padding: 12px 30px;">
                            <i class="icon-x me-2"></i>Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}