@using EcommerceCoza.BLL.ViewModels
@model List<CategoryViewModel>
@{
    ViewData["Title"] = "Categories";
}

<div class="main-content">
    <div class="main-content-inner">
        <div class="main-content-wrap">
            <div class="flex items-center flex-wrap justify-between gap20 mb-27">
                <h3>Categories</h3>
                <ul class="breadcrumbs flex items-center flex-wrap justify-start gap10">
                    <li>
                        <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
                            <div class="text-tiny">Dashboard</div>
                        </a>
                    </li>
                    <li>
                        <i class="icon-chevron-right"></i>
                    </li>
                    <li>
                        <div class="text-tiny">Categories</div>
                    </li>
                </ul>
            </div>

            @* Success/Error Messages *@
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <div class="wg-box">
                <div class="flex items-center justify-between gap10 flex-wrap">
                    <div class="wg-filter flex-grow">
                        <form class="form-search" method="get" asp-action="Index">
                            <fieldset class="name">
                                <input type="text" placeholder="Search here..." class="" name="search"
                                       tabindex="2" value="" aria-required="true">
                            </fieldset>
                            <div class="button-submit">
                                <button class="" type="submit"><i class="icon-search"></i></button>
                            </div>
                        </form>
                    </div>
                    <a class="tf-button style-1 w208" asp-area="Admin" asp-controller="Category" asp-action="Create">
                        <i class="icon-plus"></i>Add new
                    </a>
                </div>

                <div class="wg-table table-all-user">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th style="width:80px">#</th>
                                    <th>Name</th>
                                    <th>Slug</th>
                                    <th class="text-center">Products</th>
                                    <th class="text-center" style="width:150px">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Any())
                                {
                                    @foreach (var category in Model)
                                    {
                                        <tr>
                                            <td class="text-center">@category.Id</td>
                                            <td class="pname">
                                                @if (!string.IsNullOrEmpty(category.ImageName))
                                                {
                                                    <div class="image">
                                                        <img src="@category.ImageName" alt="@category.Name" class="image" style="width:50px; height:50px; object-fit:cover;">
                                                    </div>
                                                }
                                                <div class="name">
                                                    <a asp-area="Admin" asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id" class="body-title-2">
                                                        @category.Name
                                                    </a>
                                                </div>
                                            </td>
                                            <td>@category.Description</td>
                                            <td class="text-center">
                                                <a asp-area="Admin" asp-controller="Product" asp-action="Index" asp-route-categoryId="@category.Id">
                                                    @category.Products?.Count ?? 0
                                                </a>
                                            </td>
                                            <td class="text-center">
                                                <div class="list-icon-function">
                                                    <a asp-area="Admin" asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id" title="Edit">
                                                        <div class="item edit">
                                                            <i class="icon-edit-3"></i>
                                                        </div>
                                                    </a>
                                                    <form asp-area="Admin" asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id"
                                                          method="post" class="d-inline"
                                                          onsubmit="return confirm('Are you sure you want to delete this category?');">
                                                        @Html.AntiForgeryToken()
                                                        <button type="submit" class="item text-danger delete" style="border:none; background:transparent; cursor:pointer;" title="Delete">
                                                            <i class="icon-trash-2"></i>
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="5" class="text-center">No categories found.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="divider"></div>
                <div class="flex items-center justify-between flex-wrap gap10 wgp-pagination">
                </div>
            </div>
        </div>
    </div>

    <div class="bottom-page">
        <div class="body-text">Copyright © @DateTime.Now.Year SurfsideMedia</div>
    </div>
</div>