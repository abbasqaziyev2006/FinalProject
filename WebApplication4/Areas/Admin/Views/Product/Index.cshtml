@using EcommerceCoza.BLL.ViewModels
@model List<ProductViewModel>

@{
    ViewData["Title"] = "Products";
}

<div class="main-content">
    <div class="main-content-inner">
        <div class="main-content-wrap">

            <div class="flex items-center flex-wrap justify-between gap20 mb-27">
                <h3>All Products</h3>

                <ul class="breadcrumbs flex items-center flex-wrap justify-start gap10">
                    <li>
                        <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
                            <div class="text-tiny">Dashboard</div>
                        </a>
                    </li>
                    <li><i class="icon-chevron-right"></i></li>
                    <li><div class="text-tiny">Products</div></li>
                </ul>
            </div>

            <div class="wg-box">

                <div class="flex items-center justify-between gap10 flex-wrap">

                    <!-- SEARCH -->
                    <div class="wg-filter flex-grow">
                        <form method="get" asp-area="Admin" asp-controller="Product" asp-action="Index" class="form-search">
                            <fieldset class="name">
                                <input type="text" placeholder="Search here..." name="search" value="@ViewBag.Search" />
                            </fieldset>
                            <div class="button-submit">
                                <button type="submit"><i class="icon-search"></i></button>
                            </div>
                        </form>
                    </div>

                    <!-- Add new -->
                    <a class="tf-button style-1 w208"
                       asp-area="Admin" asp-controller="Product" asp-action="Create">
                        <i class="icon-plus"></i>Add new
                    </a>

                </div>

                <div class="table-responsive">

                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Name</th>
                                <th>Price</th>
                                <th>Category</th>
                                <th>Brand</th>
                                <th>Rating</th>
                                <th>Reviews</th>
                                <th class="text-center">Action</th>
                            </tr>
                        </thead>

                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                foreach (var p in Model)
                                {
                                    <tr>
                                        <td>@p.Id</td>

                                        <td>
                                            <a asp-area="Admin"
                                               asp-controller="Product"
                                               asp-action="Edit"
                                               asp-route-id="@p.Id"
                                               class="body-title-2">
                                                @p.Name
                                            </a>
                                            <div class="text-tiny">@p.DetailsUrl</div>
                                        </td>

                                        <td>$@p.BasePrice</td>

                                        <td>@p.CategoryName</td>

                                        <td>@p.BrandName</td>

                                        <td>@p.Rating ★</td>

                                        <td>@p.ReviewCount reviews</td>

                                        <td class="text-center">
                                            <div class="list-icon-function">

                                                <!-- DETAILS -->
                                                <a asp-area="Admin"
                                                   asp-controller="Product"
                                                   asp-action="Details"
                                                   asp-route-id="@p.Id">
                                                    <div class="item eye"><i class="icon-eye"></i></div>
                                                </a>

                                                <!-- EDIT -->
                                                <a asp-area="Admin"
                                                   asp-controller="Product"
                                                   asp-action="Edit"
                                                   asp-route-id="@p.Id">
                                                    <div class="item edit"><i class="icon-edit-3"></i></div>
                                                </a>

                                                <!-- DELETE -->
                                                <form asp-area="Admin"
                                                      asp-controller="Product"
                                                      asp-action="Delete"
                                                      asp-route-id="@p.Id"
                                                      method="post"
                                                      onsubmit="return confirm('Are you sure?');"
                                                      class="d-inline">
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit"
                                                            class="item text-danger delete"
                                                            style="border:none;background:transparent;">
                                                        <i class="icon-trash-2"></i>
                                                    </button>
                                                </form>

                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="8" class="text-center">No products found.</td>
                                </tr>
                            }
                        </tbody>

                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="bottom-page">
        <div class="body-text">Copyright © @DateTime.Now.Year SurfsideMedia</div>
    </div>
</div>
