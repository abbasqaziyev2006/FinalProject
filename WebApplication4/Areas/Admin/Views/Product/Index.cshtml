@using EcommerceCoza.BLL.ViewModels
@model List<ProductViewModel>

@{
    ViewData["Title"] = "Products";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="main-content">
    <div class="main-content-inner">
        <div class="main-content-wrap">
            <div class="flex items-center flex-wrap justify-between gap20 mb-27">
                <h3 style="font-size: 28px;">Products</h3>
                <ul class="breadcrumbs flex items-center flex-wrap justify-start gap10">
                    <li>
                        <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
                            <div class="text-tiny" style="font-size: 14px;">Dashboard</div>
                        </a>
                    </li>
                    <li><i class="icon-chevron-right"></i></li>
                    <li><div class="text-tiny" style="font-size: 14px;">Products</div></li>
                </ul>
            </div>

            <!-- Messages -->
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="icon-check-circle me-2"></i>@TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="icon-alert-triangle me-2"></i>@TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <div class="wg-box">
                <div class="flex items-center justify-between gap10 flex-wrap mb-3">
                    <div class="wg-filter flex-grow">
                        <form class="form-search" method="get" asp-action="Index">
                            <fieldset class="name">
                                <input type="text"
                                       placeholder="Search products..."
                                       name="search"
                                       value="@Context.Request.Query["search"]"
                                       class="form-control"
                                       aria-label="Search products">
                            </fieldset>
                            <div class="button-submit">
                                <button type="submit" class="btn btn-primary" title="Search">
                                    <i class="icon-search"></i>
                                </button>
                            </div>
                        </form>
                    </div>
                    <a class="tf-button style-1 w208" asp-area="Admin" asp-controller="Product" asp-action="Create">
                        <i class="icon-plus"></i>Add New Product
                    </a>
                </div>

                <div class="wg-table table-all-user">
                    <div class="table-responsive">
                        @if (Model != null && Model.Any())
                        {
                            <table class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th style="width:80px" class="text-center">#</th>
                                        <th>Product</th>
                                        <th>Category</th>
                                        <th>Brand</th>
                                        <th class="text-center" style="width:120px">Base Price</th>
                                        <th class="text-center" style="width:100px">Variants</th>
                                        <th class="text-center" style="width:180px">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var product in Model)
                                    {
                                        <tr>
                                            <td class="text-center">
                                                <span class="badge bg-secondary">@product.Id</span>
                                            </td>
                                            <td>
                                                <div class="pname d-flex align-items-center">
                                                    @if (product.ProductVariants != null && product.ProductVariants.Any() && !string.IsNullOrEmpty(product.ProductVariants.First().CoverImageName))
                                                    {
                                                        <div class="image me-3">
                                                            <img src="~/images/products/@product.ProductVariants.First().CoverImageName"
                                                                 alt="@product.Name"
                                                                 style="width:50px; height:50px; object-fit:cover; border-radius:8px;"
                                                                 onerror="this.src='/assets/images/no-image.png'">
                                                        </div>
                                                    }
                                                    else
                                                    {
                                                        <div class="image me-3">
                                                            <div style="width:50px; height:50px; background:#f0f0f0; border-radius:8px; display:flex; align-items:center; justify-content:center;">
                                                                <i class="icon-image" style="font-size:20px; color:#ccc;"></i>
                                                            </div>
                                                        </div>
                                                    }
                                                    <div class="name">
                                                        <a asp-area="Admin"
                                                           asp-controller="Product"
                                                           asp-action="Edit"
                                                           asp-route-id="@product.Id"
                                                           class="body-title-2 text-decoration-none">
                                                            @product.Name
                                                        </a>
                                                        @if (!string.IsNullOrEmpty(product.Description) && product.Description.Length > 50)
                                                        {
                                                            <small class="d-block text-muted">
                                                                @product.Description.Substring(0, 50)...
                                                            </small>
                                                        }
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                @if (product.Category != null)
                                                {
                                                    <span class="badge bg-info">@product.CategoryName</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">No category</span>
                                                }
                                            </td>
                                            <td>
                                                @if (product.Brand != null)
                                                {
                                                    <span class="badge bg-primary">@product.BrandName</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">No brand</span>
                                                }
                                            </td>
                                            <td class="text-center">
                                                <strong>$@product.BasePrice.ToString("F2")</strong>
                                            </td>
                                            <td class="text-center">
                                                @if (product.ProductVariants != null && product.ProductVariants.Any())
                                                {
                                                    <a asp-area="Admin"
                                                       asp-controller="ProductVariant"
                                                       asp-action="Index"
                                                       asp-route-productId="@product.Id"
                                                       class="badge bg-success text-decoration-none"
                                                       title="View variants">
                                                        @product.ProductVariants.Count
                                                    </a>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">0</span>
                                                }
                                            </td>
                                            <td>
                                                <div class="d-flex justify-content-center gap-2">
                                                    <a asp-area="Admin"
                                                       asp-controller="Product"
                                                       asp-action="Edit"
                                                       asp-route-id="@product.Id"
                                                       class="btn btn-lg btn-outline-primary"
                                                       title="Edit product">
                                                        <i class="icon-edit-3"></i> Edit
                                                    </a>
                                                    <form asp-area="Admin"
                                                          asp-controller="Product"
                                                          asp-action="Delete"
                                                          asp-route-id="@product.Id"
                                                          method="post"
                                                          class="d-inline delete-form">
                                                        @Html.AntiForgeryToken()
                                                        <button type="submit"
                                                                class="btn btn-lg btn-outline-danger"
                                                                title="Delete product"
                                                                onclick="return confirmDelete('@product.Name', @(product.ProductVariants?.Count ?? 0))">
                                                            <i class="icon-trash-2"></i> Delete
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }
                        else
                        {
                            <div class="text-center py-5">
                                <i class="icon-inbox" style="font-size: 48px; color: #ccc;"></i>
                                <h5 class="mt-3 text-muted">No products found</h5>
                                <p class="text-muted">Start by creating your first product.</p>
                                <a class="tf-button style-1 mt-3" asp-area="Admin" asp-controller="Product" asp-action="Create">
                                    <i class="icon-plus"></i>Create Product
                                </a>
                            </div>
                        }
                    </div>
                </div>

                <div class="divider mt-3"></div>

                @if (Model != null && Model.Any())
                {
                    <div class="d-flex justify-content-between align-items-center mt-3">
                        <div class="body-text">
                            Showing <strong>@Model.Count</strong> product@(Model.Count == 1 ? "" : "s")
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="bottom-page mt-4">
        <div class="body-text">Copyright © @DateTime.Now.Year SurfsideMedia</div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete(productName, variantCount) {
            let message = `Are you sure you want to delete the product "${productName}"?`;

            if (variantCount > 0) {
                message += `\n\nWarning: This product has ${variantCount} variant(s). They will be deleted as well.`;
            }

            return confirm(message);
        }

        // Auto-hide alerts after 5 seconds
        setTimeout(function() {
            $('.alert').fadeOut('slow');
        }, 5000);
    </script>
}