@model List<EcommerceCoza.BLL.ViewModels.ProductVariantViewModel>

@if (Model != null && Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th class="text-center" style="width:80px">#</th>
                    <th style="width:100px">Image</th>
                    <th>Size</th>
                    <th>Color</th>
                    <th class="text-center">Sale Price</th>
                    <th class="text-center">Quantity</th>
                    <th class="text-center">Images</th>
                    <th class="text-center" style="width:180px">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var variant in Model)
                {
                    <tr>
                        <td class="text-center">
                            <span class="badge bg-secondary">@variant.Id</span>
                        </td>
                        <td>
                            @if (!string.IsNullOrEmpty(variant.CoverImageName))
                            {
                                <img src="~/images/products/@variant.CoverImageName"
                                     alt="Cover"
                                     style="width:60px; height:60px; object-fit:cover; border-radius:8px;"
                                     onerror="this.src='/assets/images/no-image.png'">
                            }
                            else
                            {
                                <div style="width:60px; height:60px; background:#f0f0f0; border-radius:8px; display:flex; align-items:center; justify-content:center;">
                                    <i class="icon-image" style="font-size:24px; color:#ccc;"></i>
                                </div>
                            }
                        </td>
                        <td>
                            @if (!string.IsNullOrEmpty(variant.Size))
                            {
                                <span class="badge bg-info" style="font-size: 14px;">@variant.Size</span>
                            }
                            else
                            {
                                <span class="text-muted">-</span>
                            }
                        </td>
                        <td>
                            @if (!string.IsNullOrEmpty(variant.ColorName))
                            {
                                <div class="d-flex align-items-center gap-2">
                                    @if (!string.IsNullOrEmpty(variant.ColorHexCode))
                                    {
                                        <div style="width:24px; height:24px; background:@variant.ColorHexCode; border-radius:50%; border:2px solid #ddd;"></div>
                                    }
                                    <span>@variant.ColorName</span>
                                </div>
                            }
                            else
                            {
                                <span class="text-muted">No color</span>
                            }
                        </td>
                        <td class="text-center">
                            <strong style="font-size: 16px;">$@variant.Priced.ToString("F2")</strong>
                        </td>
                        <td class="text-center">
                            @if (variant.Quantity > 0)
                            {
                                <span class="badge bg-success" style="font-size: 14px;">@variant.Quantity</span>
                            }
                            else
                            {
                                <span class="badge bg-danger" style="font-size: 14px;">Out of Stock</span>
                            }
                        </td>
                        <td class="text-center">
                            @if (variant.ImageNames != null && variant.ImageNames.Any())
                            {
                                <span class="badge bg-primary" style="font-size: 14px;">@variant.ImageNames.Count</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary" style="font-size: 14px;">0</span>
                            }
                        </td>
                        <td>
                            <div class="d-flex justify-content-center gap-2">
                                <button type="button"
                                        class="btn btn-sm btn-outline-primary"
                                        onclick="editVariant(@variant.Id)"
                                        title="Edit variant">
                                    <i class="icon-edit-3"></i>
                                </button>
                                <button type="button"
                                        class="btn btn-sm btn-outline-danger"
                                        onclick="deleteVariant(@variant.Id, '@variant.Size', '@variant.ColorName')"
                                        title="Delete variant">
                                    <i class="icon-trash-2"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="text-center py-5">
        <i class="icon-inbox" style="font-size: 48px; color: #ccc;"></i>
        <h5 class="mt-3 text-muted">No variants yet</h5>
        <p class="text-muted">Add your first variant using the button above.</p>
    </div>
}