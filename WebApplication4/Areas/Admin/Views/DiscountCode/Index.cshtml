@model IEnumerable<EcommerceCoza.BLL.ViewModels.DiscountCodeViewModel>

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Discount Codes";
}

<div class="main-content">
    <div class="main-content-inner">
        <div class="main-content-wrap">
            <div class="flex items-center flex-wrap justify-between gap20 mb-27">
                <h3>Coupons</h3>
                <ul class="breadcrumbs flex items-center flex-wrap justify-start gap10">
                    <li>
                        <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
                            <div class="text-tiny">Dashboard</div>
                        </a>
                    </li>
                    <li>
                        <i class="icon-chevron-right"></i>
                    </li>
                    <li>
                        <div class="text-tiny">Coupons</div>
                    </li>
                </ul>
            </div>

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <div class="wg-box">
                <div class="flex items-center justify-between gap10 flex-wrap">
                    <div class="wg-filter flex-grow">
                        <form class="form-search">
                            <fieldset class="name">
                                <input type="text" placeholder="Search here..." class="" name="name"
                                       tabindex="2" value="" aria-required="true">
                            </fieldset>
                            <div class="button-submit">
                                <button class="" type="submit"><i class="icon-search"></i></button>
                            </div>
                        </form>
                    </div>
                    <a class="tf-button style-1 w208" asp-area="Admin" asp-controller="DiscountCode" asp-action="Create">
                        <i class="icon-plus"></i>Add new
                    </a>
                </div>
                <div class="wg-table table-all-user">
                    <div class="table-responsive">
                        @if (Model != null && Model.Any())
                        {
                            <table class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th style="width: 80px;" class="text-center">#</th>
                                        <th>Code</th>
                                        <th style="width: 120px;" class="text-center">Discount %</th>
                                        <th style="width: 120px;" class="text-center">Status</th>
                                        <th style="width: 150px;" class="text-center">Created Date</th>
                                        <th style="width: 200px;" class="text-center">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int rowNumber = 1;
                                    }
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td class="text-center">
                                                <span class="badge bg-secondary">@rowNumber</span>
                                            </td>
                                            <td><strong>@item.Code</strong></td>
                                            <td class="text-center">@item.SalePercentage%</td>
                                            <td class="text-center">
                                                @if (item.IsActive)
                                                {
                                                    <span class="badge bg-success">Active</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">Inactive</span>
                                                }
                                            </td>
                                            <td class="text-center">@item.CreatedDate.ToString("yyyy-MM-dd")</td>
                                            <td>
                                                <div class="d-flex justify-content-center gap-2">
                                                    <a asp-area="Admin"
                                                       asp-controller="DiscountCode"
                                                       asp-action="Edit"
                                                       asp-route-id="@item.Id"
                                                       class="btn btn-sm btn-outline-primary"
                                                       title="Edit coupon">
                                                        <i class="icon-edit-3"></i> Edit
                                                    </a>
                                                    <form asp-area="Admin"
                                                          asp-controller="DiscountCode"
                                                          asp-action="Delete"
                                                          asp-route-id="@item.Id"
                                                          method="post"
                                                          class="d-inline"
                                                          onsubmit="return confirm('Are you sure you want to delete the coupon @item.Code?');">
                                                        @Html.AntiForgeryToken()
                                                        <button type="submit"
                                                                class="btn btn-sm btn-outline-danger"
                                                                title="Delete coupon">
                                                            <i class="icon-trash-2"></i> Delete
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                        rowNumber++;
                                    }
                                </tbody>
                            </table>
                        }
                        else
                        {
                            <div class="text-center py-5">
                                <i class="icon-inbox" style="font-size: 48px; color: #ccc;"></i>
                                <h5 class="mt-3 text-muted">No discount codes found</h5>
                                <p class="text-muted">Create your first coupon to get started.</p>
                                <a class="tf-button style-1 mt-3" asp-area="Admin" asp-controller="DiscountCode" asp-action="Create">
                                    <i class="icon-plus"></i>Create Coupon
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="bottom-page">
        <div class="body-text">Copyright © @DateTime.Now.Year SurfsideMedia</div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-hide alerts after 5 seconds
        setTimeout(function() {
            $('.alert').fadeOut('slow');
        }, 5000);
    </script>
}