@model EcommerceCoza.BLL.ViewModels.DiscountCodeCreateViewModel

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Create Discount Code";
}

<div class="main-content">
    <div class="main-content-inner">
        <div class="main-content-wrap">
            <div class="flex items-center flex-wrap justify-between gap20 mb-27">
                <h3>Coupon Information</h3>
                <ul class="breadcrumbs flex items-center flex-wrap justify-start gap10">
                    <li>
                        <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
                            <div class="text-tiny">Dashboard</div>
                        </a>
                    </li>
                    <li>
                        <i class="icon-chevron-right"></i>
                    </li>
                    <li>
                        <a asp-area="Admin" asp-controller="DiscountCode" asp-action="Index">
                            <div class="text-tiny">Coupons</div>
                        </a>
                    </li>
                    <li>
                        <i class="icon-chevron-right"></i>
                    </li>
                    <li>
                        <div class="text-tiny">New Coupon</div>
                    </li>
                </ul>
            </div>

            <div class="wg-box">
                <form asp-area="Admin" asp-controller="DiscountCode" asp-action="Create" method="post" class="form-new-product form-style-1">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <fieldset class="name">
                        <div class="body-title">Coupon Code <span class="tf-color-1">*</span></div>
                        <input asp-for="Code" class="flex-grow" type="text" placeholder="Enter Coupon Code (e.g., SAVE20)"
                               tabindex="0" aria-required="true">
                        <span asp-validation-for="Code" class="text-danger"></span>
                    </fieldset>

                    <fieldset class="name">
                        <div class="body-title">Discount Percentage <span class="tf-color-1">*</span></div>
                        <input asp-for="SalePercentage" class="flex-grow" type="number" min="1" max="100"
                               placeholder="Enter discount percentage (1-100)"
                               tabindex="0" aria-required="true">
                        <span asp-validation-for="SalePercentage" class="text-danger"></span>
                    </fieldset>

                    <fieldset class="category">
                        <div class="body-title">Status</div>
                        <div class="select flex-grow">
                            <select asp-for="IsActive" class="">
                                <option value="true" selected>Active</option>
                                <option value="false">Inactive</option>
                            </select>
                        </div>
                        <span asp-validation-for="IsActive" class="text-danger"></span>
                    </fieldset>

                    <div class="bot">
                        <div></div>
                        <button class="tf-button w208" type="submit">Save Coupon</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="bottom-page">
        <div class="body-text">Copyright © 2024 SurfsideMedia</div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}