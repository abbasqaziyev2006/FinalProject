@using EcommerceCoza.BLL.ViewModels
@model List<BrandViewModel>

@{
    ViewData["Title"] = "Brands";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="main-content">
    <div class="main-content-inner">
        <div class="main-content-wrap">
            <div class="flex items-center flex-wrap justify-between gap20 mb-27">
                <h3 style="font-size: 28px;">Brands</h3>
                <ul class="breadcrumbs flex items-center flex-wrap justify-start gap10">
                    <li>
                        <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
                            <div class="text-tiny" style="font-size: 14px;">Dashboard</div>
                        </a>
                    </li>
                    <li><i class="icon-chevron-right"></i></li>
                    <li><div class="text-tiny" style="font-size: 14px;">Brands</div></li>
                </ul>
            </div>

            <!-- Messages -->
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="icon-check-circle me-2"></i>@TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="icon-alert-triangle me-2"></i>@TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <div class="wg-box">
                <div class="flex items-center justify-between gap10 flex-wrap mb-3">
                    <div class="wg-filter flex-grow">
                        <form class="form-search" method="get" asp-action="Index">
                            <fieldset class="name">
                                <input type="text"
                                       placeholder="Search brands..."
                                       name="search"
                                       value="@Context.Request.Query["search"]"
                                       class="form-control"
                                       aria-label="Search brands">
                            </fieldset>
                            <div class="button-submit">
                                <button type="submit" class="btn btn-primary" title="Search">
                                    <i class="icon-search"></i>
                                </button>
                            </div>
                        </form>
                    </div>
                    <a class="tf-button style-1 w208" asp-area="Admin" asp-controller="Brand" asp-action="Create">
                        <i class="icon-plus"></i>Add New Brand
                    </a>
                </div>

                <div class="wg-table table-all-user">
                    <div class="table-responsive">
                        @if (Model != null && Model.Any())
                        {
                            <table class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th style="width:80px" class="text-center">#</th>
                                        <th>Brand</th>
                                        <th>Description</th>
                                        <th class="text-center" style="width:100px">Products</th>
                                        <th class="text-center" style="width:100px">Status</th>
                                        <th class="text-center" style="width:180px">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var brand in Model)
                                    {
                                        <tr>
                                            <td class="text-center">
                                                <span class="badge bg-secondary">@brand.Id</span>
                                            </td>
                                            <td>
                                                <div class="pname d-flex align-items-center">
                                                    @if (!string.IsNullOrEmpty(brand.LogoUrl))
                                                    {
                                                        <div class="image me-3">
                                                            <img src="@brand.LogoUrl"
                                                                 alt="@brand.Name"
                                                                 style="width:50px; height:50px; object-fit:cover; border-radius:8px;"
                                                                 onerror="this.src='/assets/images/no-image.png'">
                                                        </div>
                                                    }
                                                    else
                                                    {
                                                        <div class="image me-3">
                                                            <div style="width:50px; height:50px; background:#f0f0f0; border-radius:8px; display:flex; align-items:center; justify-content:center;">
                                                                <i class="icon-image" style="font-size:20px; color:#ccc;"></i>
                                                            </div>
                                                        </div>
                                                    }
                                                    <div class="name">
                                                        <a asp-area="Admin"
                                                           asp-controller="Brand"
                                                           asp-action="Edit"
                                                           asp-route-id="@brand.Id"
                                                           class="body-title-2 text-decoration-none">
                                                            @brand.Name
                                                        </a>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(brand.Description))
                                                {
                                                    <span title="@brand.Description">
                                                        @(brand.Description.Length > 60
                                                                                                    ? brand.Description.Substring(0, 60) + "..."
                                                                                                    : brand.Description)
                                        </span>
                                                                                }
                                                else
                                                {
                                                    <span class="text-muted">No description</span>
                                                }
                                            </td>
                                            <td class="text-center">
                                                @if (brand.Products != null && brand.Products.Any())
                                                {
                                                    <a asp-area="Admin"
                                                       asp-controller="Product"
                                                       asp-action="Index"
                                                       asp-route-brandId="@brand.Id"
                                                       class="badge bg-info text-decoration-none"
                                                       title="View products of this brand">
                                                        @brand.Products.Count
                                                    </a>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">0</span>
                                                }
                                            </td>
                                            <td class="text-center">
                                                @if (brand.IsActive)
                                                {
                                                    <span class="badge bg-success">Active</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-warning">Inactive</span>
                                                }
                                            </td>
                                            <td>
                                                <div class="d-flex justify-content-center gap-2">
                                                    <a asp-area="Admin"
                                                       asp-controller="Brand"
                                                       asp-action="Edit"
                                                       asp-route-id="@brand.Id"
                                                       class="btn btn-lg btn-outline-primary"
                                                       title="Edit brand">
                                                        <i class="icon-edit-3"></i> Edit
                                                    </a>
                                                    <form asp-area="Admin"
                                                          asp-controller="Brand"
                                                          asp-action="Delete"
                                                          asp-route-id="@brand.Id"
                                                          method="post"
                                                          class="d-inline delete-form"
                                                          data-brand-name="@brand.Name">
                                                        @Html.AntiForgeryToken()
                                                        <button type="submit"
                                                                class="btn btn-lg btn-outline-danger"
                                                                title="Delete brand"
                                                                onclick="return confirmDelete('@brand.Name', @(brand.Products?.Count ?? 0))">
                                                            <i class="icon-trash-2"></i> Delete
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }
                        else
                        {
                            <div class="text-center py-5">
                                <i class="icon-inbox" style="font-size: 48px; color: #ccc;"></i>
                                <h5 class="mt-3 text-muted">No brands found</h5>
                                <p class="text-muted">Start by creating your first brand.</p>
                                <a class="tf-button style-1 mt-3" asp-area="Admin" asp-controller="Brand" asp-action="Create">
                                    <i class="icon-plus"></i>Create Brand
                                </a>
                            </div>
                        }
                    </div>
                </div>

                <div class="divider mt-3"></div>

                @if (Model != null && Model.Any())
                {
                    <div class="d-flex justify-content-between align-items-center mt-3">
                        <div class="body-text">
                            Showing <strong>@Model.Count</strong> brand@(Model.Count == 1 ? "" : "s")
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="bottom-page mt-4">
        <div class="body-text">Copyright © @DateTime.Now.Year SurfsideMedia</div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete(brandName, productCount) {
            let message = `Are you sure you want to delete the brand "${brandName}"?`;

            if (productCount > 0) {
                message += `\n\nWarning: This brand contains ${productCount} product(s). They may be affected.`;
            }

            return confirm(message);
        }

        // Auto-hide alerts after 5 seconds
        setTimeout(function() {
            $('.alert').fadeOut('slow');
        }, 5000);
    </script>
}