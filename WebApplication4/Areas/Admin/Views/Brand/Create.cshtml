@using EcommerceCoza.BLL.ViewModels
@model BrandCreateViewModel

@{
    ViewData["Title"] = "Create Brand";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="main-content">
    <div class="main-content-inner">
        <div class="main-content-wrap">
            <div class="flex items-center flex-wrap justify-between gap20 mb-27">
                <h3 style="font-size: 28px;">Create New Brand</h3>
                <ul class="breadcrumbs flex items-center flex-wrap justify-start gap10">
                    <li>
                        <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
                            <div class="text-tiny" style="font-size: 14px;">Dashboard</div>
                        </a>
                    </li>
                    <li><i class="icon-chevron-right"></i></li>
                    <li>
                        <a asp-area="Admin" asp-controller="Brand" asp-action="Index">
                            <div class="text-tiny" style="font-size: 14px;">Brands</div>
                        </a>
                    </li>
                    <li><i class="icon-chevron-right"></i></li>
                    <li><div class="text-tiny" style="font-size: 14px;">New Brand</div></li>
                </ul>
            </div>

            <div class="wg-box">
                <form asp-area="Admin"
                      asp-controller="Brand"
                      asp-action="Create"
                      method="post"
                      enctype="multipart/form-data">
                    @Html.AntiForgeryToken()

                    <div class="mb-4">
                        <label asp-for="Name" class="form-label" style="font-size: 18px; font-weight: 600;">
                            Brand Name <span class="text-danger">*</span>
                        </label>
                        <input asp-for="Name"
                               class="form-control"
                               placeholder="Enter brand name"
                               style="font-size: 16px; padding: 12px;" />
                        <span asp-validation-for="Name" class="text-danger" style="font-size: 14px;"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Description" class="form-label" style="font-size: 18px; font-weight: 600;">
                            Description
                        </label>
                        <textarea asp-for="Description"
                                  class="form-control"
                                  rows="4"
                                  placeholder="Enter brand description (optional)"
                                  style="font-size: 16px; padding: 12px;"></textarea>
                        <span asp-validation-for="Description" class="text-danger" style="font-size: 14px;"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Logo" class="form-label" style="font-size: 18px; font-weight: 600;">
                            Brand Logo
                        </label>
                        <div class="upload-image flex-grow">
                            <div class="item" id="imgpreview" style="display:none; margin-bottom: 15px;">
                                <img src="#" id="previewImg" style="width:120px; height:120px; object-fit:cover; border-radius:8px;" alt="Preview">
                            </div>
                            <div id="upload-file" class="item up-load">
                                <label class="uploadfile" for="logoFile" style="cursor: pointer;">
                                    <span class="icon">
                                        <i class="icon-upload-cloud" style="font-size: 32px;"></i>
                                    </span>
                                    <span class="body-text" style="font-size: 16px; margin-top: 10px; display: block;">
                                        Drop your image here or <span class="tf-color">click to browse</span>
                                    </span>
                                    <input asp-for="Logo"
                                           type="file"
                                           id="logoFile"
                                           accept="image/*"
                                           style="display: none;"
                                           onchange="previewImage(this)">
                                </label>
                            </div>
                        </div>
                        <span asp-validation-for="Logo" class="text-danger" style="font-size: 14px;"></span>
                    </div>

                    <div class="mb-4">
                        <div class="form-check" style="padding-left: 0;">
                            <label style="font-size: 18px; font-weight: 600; cursor: pointer; display: flex; align-items: center; gap: 10px;">
                                <input type="checkbox"
                                       name="IsActive"
                                       value="true"
                                       checked
                                       style="width: 24px; height: 24px; cursor: pointer;" />
                                <span>Active</span>
                            </label>
                            <input type="hidden" name="IsActive" value="false" />
                        </div>
                        <small class="text-muted" style="font-size: 14px; display: block; margin-top: 8px; margin-left: 34px;">Check this to make the brand visible on the website</small>
                    </div>

                    <div class="d-flex gap-3 mt-5">
                        <button type="submit" class="btn btn-lg btn-primary" style="font-size: 18px; padding: 12px 30px;">
                            <i class="icon-save me-2"></i>Create Brand
                        </button>
                        <a asp-area="Admin"
                           asp-controller="Brand"
                           asp-action="Index"
                           class="btn btn-lg btn-secondary" style="font-size: 18px; padding: 12px 30px;">
                            <i class="icon-x me-2"></i>Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="bottom-page mt-4">
        <div class="body-text">Copyright © @DateTime.Now.Year SurfsideMedia</div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        function previewImage(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function(e) {
                    $('#previewImg').attr('src', e.target.result);
                    $('#imgpreview').show();
                    $('#upload-file').hide();
                }

                reader.readAsDataURL(input.files[0]);
            }
        }

        // Allow clicking on preview to change image
        $('#imgpreview').click(function() {
            $('#logoFile').click();
        });
    </script>
}