@using EcommerceCoza.BLL.ViewModels
@model BrandUpdateViewModel

@{
    ViewData["Title"] = "Edit Brand";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="main-content">
    <div class="main-content-inner">
        <div class="main-content-wrap">
            <div class="flex items-center flex-wrap justify-between gap20 mb-27">
                <h3 style="font-size: 28px;">Edit Brand</h3>
                <ul class="breadcrumbs flex items-center flex-wrap justify-start gap10">
                    <li>
                        <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
                            <div class="text-tiny" style="font-size: 14px;">Dashboard</div>
                        </a>
                    </li>
                    <li><i class="icon-chevron-right"></i></li>
                    <li>
                        <a asp-area="Admin" asp-controller="Brand" asp-action="Index">
                            <div class="text-tiny" style="font-size: 14px;">Brands</div>
                        </a>
                    </li>
                    <li><i class="icon-chevron-right"></i></li>
                    <li><div class="text-tiny" style="font-size: 14px;">Edit</div></li>
                </ul>
            </div>

            <div class="wg-box">
                <form asp-area="Admin"
                      asp-controller="Brand"
                      asp-action="Edit"
                      method="post"
                      enctype="multipart/form-data">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="CurrentLogoUrl" />

                    <div class="mb-4">
                        <label asp-for="Name" class="form-label" style="font-size: 18px; font-weight: 600;"></label>
                        <input asp-for="Name" class="form-control" style="font-size: 16px; padding: 12px;" />
                        <span asp-validation-for="Name" class="text-danger" style="font-size: 14px;"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Description" class="form-label" style="font-size: 18px; font-weight: 600;"></label>
                        <textarea asp-for="Description" class="form-control" rows="4" style="font-size: 16px; padding: 12px;"></textarea>
                        <span asp-validation-for="Description" class="text-danger" style="font-size: 14px;"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="LogoFile" class="form-label" style="font-size: 18px; font-weight: 600;">Logo</label>
                        <input asp-for="LogoFile" type="file" class="form-control" style="font-size: 16px; padding: 12px;" />
                        <span asp-validation-for="LogoFile" class="text-danger" style="font-size: 14px;"></span>

                        @if (!string.IsNullOrEmpty(Model.CurrentLogoUrl))
                        {
                            <div class="mt-3">
                                <div style="font-size: 16px; margin-bottom: 8px;">Current logo:</div>
                                <img src="@Model.CurrentLogoUrl"
                                     alt="@Model.Name"
                                     style="width:120px; height:120px; object-fit:cover; border-radius:8px;" />
                            </div>
                        }
                    </div>

                    <div class="mb-4">
                        <div class="form-check" style="padding-left: 0;">
                            <label style="font-size: 18px; font-weight: 600; cursor: pointer; display: flex; align-items: center; gap: 10px;">
                                <input type="checkbox"
                                       name="IsActive"
                                       value="true"
                                       @(Model.IsActive ? "checked" : "")
                                       style="width: 24px; height: 24px; cursor: pointer;" />
                                <span>Active</span>
                            </label>
                            <input type="hidden" name="IsActive" value="false" />
                        </div>
                        <small class="text-muted" style="font-size: 14px; display: block; margin-top: 8px; margin-left: 34px;">Check this to make the brand visible on the website</small>
                    </div>

                    <div class="d-flex gap-3 mt-5">
                        <button type="submit" class="btn btn-lg btn-primary" style="font-size: 18px; padding: 12px 30px;">
                            <i class="icon-save me-2"></i>Save Changes
                        </button>
                        <a asp-area="Admin"
                           asp-controller="Brand"
                           asp-action="Index"
                           class="btn btn-lg btn-secondary" style="font-size: 18px; padding: 12px 30px;">
                            <i class="icon-x me-2"></i>Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}