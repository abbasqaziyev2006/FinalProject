@using EcommerceCoza.BLL.ViewModels
@using ECommerceCoza.DAL.DataContext.Entities
@model OrderViewModel

@{
    ViewData["Title"] = "Order Tracking";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="main-content">
    <div class="main-content-inner">
        <div class="main-content-wrap">

            <!-- Breadcrumb -->
            <div class="flex items-center flex-wrap justify-between gap20 mb-27">
                <h3>Order Tracking</h3>
                <ul class="breadcrumbs flex items-center flex-wrap justify-start gap10">
                    <li>
                        <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
                            <div class="text-tiny">Dashboard</div>
                        </a>
                    </li>
                    <li><i class="icon-chevron-right"></i></li>
                    <li>
                        <a asp-area="Admin" asp-controller="Order" asp-action="Index">
                            <div class="text-tiny">Orders</div>
                        </a>
                    </li>
                    <li><i class="icon-chevron-right"></i></li>
                    <li><div class="text-tiny">Tracking</div></li>
                </ul>
            </div>

            <!-- Track Order Form -->
            <div class="wg-box mb-4">
                <h5 class="mb-4">Track Order</h5>

                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="icon-alert-triangle"></i> @TempData["Error"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                <form asp-area="Admin"
                      asp-controller="Order"
                      asp-action="Tracking"
                      method="post"
                      class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label">Order ID <span class="text-danger">*</span></label>
                        <input type="number"
                               name="orderId"
                               value="@(Model?.Id ?? 0)"
                               class="form-control"
                               placeholder="Enter Order ID" />
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Customer Email <span class="text-danger">*</span></label>
                        <input type="email"
                               name="email"
                               value="@Model?.Email"
                               class="form-control"
                               placeholder="customer@example.com" />
                    </div>

                    <div class="col-12">
                        <button type="submit" class="tf-button btn-primary w-100">
                            <i class="icon-search"></i> Track Order
                        </button>
                    </div>
                </form>
            </div>

            @if (Model != null)
            {
                <!-- Order Summary -->
                <div class="wg-box mb-4">
                    <div class="row g-3">
                        <div class="col-md-3">
                            <div class="order-info-card">
                                <h6>Order Number</h6>
                                <div class="info-value">#@Model.Id</div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="order-info-card">
                                <h6>Order Date</h6>
                                <div class="info-value">@Model.FormattedCreatedAt</div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="order-info-card">
                                <h6>Total Amount</h6>
                                <div class="info-value">@Model.EndPrice.ToString("C")</div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="order-info-card">
                                <h6>Status</h6>
                                <div class="info-value">
                                    @switch (Model.OrderStatus)
                                    {
                                        case OrderStatus.InProgress:
                                            <span class="badge bg-warning text-dark">In Progress</span>
                                            break;
                                        case OrderStatus.OnHold:
                                            <span class="badge bg-secondary">On Hold</span>
                                            break;
                                        case OrderStatus.Cancelled:
                                            <span class="badge bg-danger">Cancelled</span>
                                            break;
                                        case OrderStatus.Completed:
                                            <span class="badge bg-info">Completed</span>
                                            break;
                                        case OrderStatus.Delivered:
                                            <span class="badge bg-success">Delivered</span>
                                            break;
                                        default:
                                            <span class="badge bg-secondary">@Model.OrderStatus</span>
                                            break;
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Timeline -->
                <div class="wg-box mb-4">
                    <h5 class="mb-4">Order Status Timeline</h5>
                    <ul class="order-timeline">
                        <!-- Order Placed -->
                        <li class="timeline-item completed">
                            <div class="timeline-marker">
                                <i class="icon-check"></i>
                            </div>
                            <div class="timeline-info">
                                <strong>Order Placed</strong>
                                <span class="timeline-date">@Model.FormattedCreatedAt</span>
                            </div>
                        </li>

                        <!-- In Progress -->
                        <li class="timeline-item @(Model.OrderStatus >= OrderStatus.InProgress ? "completed" : "pending")">
                            <div class="timeline-marker">
                                <i class="@(Model.OrderStatus == OrderStatus.InProgress ? "icon-clock" : "icon-check")"></i>
                            </div>
                            <div class="timeline-info">
                                <strong>In Progress</strong>
                                @if (Model.OrderStatus == OrderStatus.InProgress)
                                {
                                    <span class="timeline-date">Processing your order...</span>
                                }
                            </div>
                        </li>

                        <!-- Completed -->
                        <li class="timeline-item @(Model.OrderStatus >= OrderStatus.Completed ? "completed" : Model.OrderStatus == OrderStatus.Cancelled ? "skipped" : "pending")">
                            <div class="timeline-marker">
                                <i class="@(Model.OrderStatus >= OrderStatus.Completed ? "icon-check" : "icon-package")"></i>
                            </div>
                            <div class="timeline-info">
                                <strong>Order Completed</strong>
                                @if (Model.OrderStatus == OrderStatus.Completed)
                                {
                                    <span class="timeline-date">Ready for delivery</span>
                                }
                            </div>
                        </li>

                        <!-- Delivered -->
                        <li class="timeline-item @(Model.OrderStatus == OrderStatus.Delivered ? "completed" : Model.OrderStatus == OrderStatus.Cancelled ? "skipped" : "pending")">
                            <div class="timeline-marker">
                                <i class="@(Model.OrderStatus == OrderStatus.Delivered ? "icon-check" : "icon-truck")"></i>
                            </div>
                            <div class="timeline-info">
                                <strong>Delivered</strong>
                                @if (!string.IsNullOrEmpty(Model.FormattedDeliveredDate))
                                {
                                    <span class="timeline-date">@Model.FormattedDeliveredDate</span>
                                }
                            </div>
                        </li>

                        <!-- Cancelled -->
                        @if (Model.OrderStatus == OrderStatus.Cancelled)
                        {
                            <li class="timeline-item cancelled">
                                <div class="timeline-marker">
                                    <i class="icon-x"></i>
                                </div>
                                <div class="timeline-info">
                                    <strong>Order Cancelled</strong>
                                    @if (!string.IsNullOrEmpty(Model.FormattedCanceledDate))
                                    {
                                        <span class="timeline-date">@Model.FormattedCanceledDate</span>
                                    }
                                </div>
                            </li>
                        }

                        <!-- On Hold -->
                        @if (Model.OrderStatus == OrderStatus.OnHold)
                        {
                            <li class="timeline-item on-hold">
                                <div class="timeline-marker">
                                    <i class="icon-pause"></i>
                                </div>
                                <div class="timeline-info">
                                    <strong>On Hold</strong>
                                    <span class="timeline-date">Order is temporarily on hold</span>
                                </div>
                            </li>
                        }
                    </ul>
                </div>

                <!-- Order Items -->
                <div class="wg-box mb-4">
                    <h5 class="mb-4">Order Items</h5>

                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th style="width: 50px">#</th>
                                    <th>Product</th>
                                    <th>Variant</th>
                                    <th class="text-center">Quantity</th>
                                    <th class="text-end">Unit Price</th>
                                    <th class="text-end">Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.OrderDetails != null && Model.OrderDetails.Any())
                                {
                                    var index = 1;
                                    foreach (var item in Model.OrderDetails)
                                    {
                                        var unitPrice = item.Quantity > 0 ? item.TotalPrice / item.Quantity : 0;
                                        <tr>
                                            <td class="text-center">@index</td>
                                            <td>
                                                <div class="fw-semibold">@(item.ProductVariant?.ProductName ?? "N/A")</div>
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(item.ProductVariant?.ColorName))
                                                {
                                                    <span class="badge bg-secondary me-1">@item.ProductVariant.ColorName</span>
                                                }
                                                @if (!string.IsNullOrEmpty(item.ProductVariant?.Size))
                                                {
                                                    <span class="badge bg-secondary">@item.ProductVariant.Size</span>
                                                }
                                                @if (string.IsNullOrEmpty(item.ProductVariant?.ColorName) && string.IsNullOrEmpty(item.ProductVariant?.Size))
                                                {
                                                    <span class="text-muted">Default</span>
                                                }
                                            </td>
                                            <td class="text-center">@item.Quantity</td>
                                            <td class="text-end">@unitPrice.ToString("C")</td>
                                            <td class="text-end fw-semibold">@item.TotalPrice.ToString("C")</td>
                                        </tr>
                                        index++;
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="6" class="text-center text-muted py-4">
                                            No products found in this order.
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th colspan="5" class="text-end">Subtotal:</th>
                                    <th class="text-end">@Model.TotalPrice.ToString("C")</th>
                                </tr>
                                @if (Model.DiscountAmount > 0)
                                {
                                    <tr>
                                        <th colspan="5" class="text-end">Discount:</th>
                                        <th class="text-end text-success">-@Model.DiscountAmount.ToString("C")</th>
                                    </tr>
                                }
                                <tr>
                                    <th colspan="5" class="text-end">Tax (21%):</th>
                                    <th class="text-end">@Model.Tax.ToString("C")</th>
                                </tr>
                                <tr class="table-active">
                                    <th colspan="5" class="text-end fs-5">Total:</th>
                                    <th class="text-end fs-5 text-primary">@Model.EndPrice.ToString("C")</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>

                <!-- Shipping & Payment -->
                <div class="row g-4">
                    <div class="col-md-6">
                        <div class="wg-box h-100">
                            <h6 class="mb-3">
                                <i class="icon-map-pin"></i> Shipping Address
                            </h6>
                            @if (Model.Address != null)
                            {
                                <p class="mb-2">
                                    <strong>@((Model.Address.FirstName ?? "") + " " + (Model.Address.LastName ?? ""))</strong>
                                </p>
                                @if (!string.IsNullOrWhiteSpace(Model.Address.Adress))
                                {
                                    <p class="mb-2">@Model.Address.Adress</p>
                                }
                                <p class="mb-2">
                                    @(Model.Address.City ?? "")@(!string.IsNullOrWhiteSpace(Model.Address.City) && !string.IsNullOrWhiteSpace(Model.Address.PostalCode) ? ", " : "")@(Model.Address.PostalCode ?? "")
                                </p>
                                @if (!string.IsNullOrWhiteSpace(Model.Address.Country))
                                {
                                    <p class="mb-2">@Model.Address.Country</p>
                                }
                                <p class="mb-0">
                                    <i class="icon-phone"></i> @Model.Phone
                                </p>
                            }
                            else
                            {
                                <p class="text-muted">No address information</p>
                            }
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="wg-box h-100">
                            <h6 class="mb-3">
                                <i class="icon-credit-card"></i> Payment Information
                            </h6>
                            <p class="mb-2">
                                <strong>Payment Method:</strong>
                                @switch (Model.PaymentMethod)
                                {
                                    case PaymentMethod.DirectBankTransfer:
                                        <span class="badge bg-info">Bank Transfer</span>
                                        break;
                                    case PaymentMethod.CashOnDelivery:
                                        <span class="badge bg-warning text-dark">Cash on Delivery</span>
                                        break;
                                    case PaymentMethod.Stripe:
                                        <span class="badge bg-primary">Stripe</span>
                                        break;
                                }
                            </p>
                            <p class="mb-2">
                                <strong>Email:</strong> @Model.Email
                            </p>
                            @if (Model.GiftWrap)
                            {
                                <p class="mb-2">
                                    <i class="icon-gift"></i>
                                    <strong>Gift Wrap:</strong>
                                    <span class="text-success">Yes</span>
                                </p>
                            }
                            @if (!string.IsNullOrEmpty(Model.Note))
                            {
                                <div class="mt-3">
                                    <strong>Order Notes:</strong>
                                    <p class="p-2 bg-light border rounded mt-2">@Model.Note</p>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="wg-box text-center py-5">
                    <i class="icon-search" style="font-size: 48px; color: #ccc;"></i>
                    <p class="text-muted mt-3">Enter Order ID and Email to track order</p>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .wg-box {
        background: #fff;
        border-radius: 12px;
        padding: 24px;
        box-shadow: 0 2px 12px rgba(0,0,0,0.06);
        transition: all 0.3s ease;
    }

    .wg-box:hover {
        box-shadow: 0 4px 20px rgba(0,0,0,0.1);
    }

    .order-info-card {
        padding: 20px;
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        border-radius: 10px;
        border-left: 4px solid #007bff;
        height: 100%;
    }

    .order-info-card h6 {
        font-size: 11px;
        text-transform: uppercase;
        color: #6c757d;
        font-weight: 600;
        margin-bottom: 10px;
        letter-spacing: 0.5px;
    }

    .order-info-card .info-value {
        font-size: 18px;
        font-weight: 700;
        color: #2c3e50;
    }

    /* Timeline Styles */
    .order-timeline {
        list-style: none;
        padding: 20px 0;
        margin: 0;
        position: relative;
    }

    .order-timeline::before {
        content: "";
        position: absolute;
        left: 20px;
        top: 0;
        width: 3px;
        height: 100%;
        background: linear-gradient(180deg, #e0e0e0 0%, #f5f5f5 100%);
    }

    .timeline-item {
        display: flex;
        align-items: flex-start;
        margin-bottom: 35px;
        position: relative;
    }

    .timeline-item:last-child {
        margin-bottom: 0;
    }

    .timeline-marker {
        width: 42px;
        height: 42px;
        background: #e9ecef;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 2;
        margin-right: 20px;
        flex-shrink: 0;
        border: 4px solid #fff;
        box-shadow: 0 3px 8px rgba(0,0,0,0.12);
        transition: all 0.3s ease;
    }

    .timeline-item.completed .timeline-marker {
        background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
        color: white;
        animation: pulse 2s infinite;
    }

    .timeline-item.pending .timeline-marker {
        background: #f8f9fa;
        color: #adb5bd;
        border-color: #dee2e6;
    }

    .timeline-item.cancelled .timeline-marker {
        background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);
        color: white;
    }

    .timeline-item.on-hold .timeline-marker {
        background: linear-gradient(135deg, #ffc107 0%, #ff9800 100%);
        color: white;
    }

    .timeline-item.skipped .timeline-marker {
        background: #e9ecef;
        color: #adb5bd;
        opacity: 0.4;
    }

    .timeline-info {
        flex: 1;
        padding-top: 8px;
    }

    .timeline-info strong {
        display: block;
        font-size: 16px;
        font-weight: 600;
        color: #2c3e50;
        margin-bottom: 5px;
    }

    .timeline-date {
        font-size: 13px;
        color: #6c757d;
        display: block;
    }

    @@keyframes pulse {
        0%, 100% {
            transform: scale(1);
            box-shadow: 0 3px 8px rgba(0,0,0,0.12);
        }
        50% {
            transform: scale(1.08);
            box-shadow: 0 4px 12px rgba(40, 167, 69, 0.3);
        }
    }

    /* Table Styles */
    .table {
        margin-bottom: 0;
    }

    .table thead th {
        background: #f8f9fa;
        border-bottom: 2px solid #dee2e6;
        font-weight: 600;
        color: #495057;
        font-size: 13px;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .table tbody tr {
        transition: background-color 0.2s ease;
    }

    .table tbody tr:hover {
        background-color: #f8f9fa;
    }

    .table tfoot {
        background: #f8f9fa;
    }

    .table tfoot th {
        font-size: 14px;
        padding: 12px;
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .order-info-card .info-value {
            font-size: 16px;
        }

        .timeline-marker {
            width: 38px;
            height: 38px;
        }

        .timeline-info strong {
            font-size: 14px;
        }

        .timeline-date {
            font-size: 12px;
        }
    }
</style