@using EcommerceCoza.BLL.ViewModels
@model WishlistItemsViewModel
@inject WebApplication4.Services.ICurrencyService CurrencyService

<main class="pt-90">
    <div class="mb-5 pb-5"></div>
    <section class="my-account container">
        <h2 class="page-title mt-4 mb-5">Wishlist</h2>

        <form class="mb-4" onsubmit="return false;">
            <div class="d-flex gap-2 align-items-center" style="max-width:420px;">
                <input id="wishlistSearchInput"
                       class="form-control form-control-sm"
                       type="text"
                       placeholder="Search wishlist..." />
                <button type="button"
                        id="wishlistSearchBtn"
                        class="btn btn-outline-secondary btn-sm d-flex align-items-center justify-content-center px-2"
                        style="width:34px;height:34px;"
                        title="Search">
                    <svg width="16" height="16"><use href="#icon_search" /></svg>
                </button>
            </div>
        </form>

        <div class="row">
            <div class="col-lg-12">
                @if (Model.Items.Any())
                {
                    <div class="page-content my-account__wishlist">
                        <div class="products-grid row row-cols-2 row-cols-lg-3" id="products-grid">
                            @foreach (var item in Model.Items)
                            {
                                @if (item.Product != null)
                                {
                                    var firstVariant = item.Product.ProductVariants.FirstOrDefault();
                                    var coverImage = !string.IsNullOrEmpty(firstVariant?.CoverImageName)
                                    ? firstVariant.CoverImageName
                                    : firstVariant?.ImageNames?.FirstOrDefault();
                                    var secondImage = firstVariant?.ImageNames?.FirstOrDefault();
                                    var categoryName = item.Product.CategoryName ?? "Uncategorized";

                                    <div class="product-card-wrapper" data-product-id="@item.ProductId">
                                        <div class="product-card mb-3 mb-md-4 mb-xxl-5">
                                            <div class="pc__img-wrapper">
                                                @if (!string.IsNullOrEmpty(coverImage))
                                                {
                                                    <div class="swiper-container background-img js-swiper-slider" data-settings='{"resizeObserver": true}'>
                                                        <div class="swiper-wrapper">
                                                            <div class="swiper-slide">
                                                                <a asp-controller="Product" asp-action="Details" asp-route-id="@item.Product.DetailsUrl">
                                                                    <img loading="lazy" src="~/images/products/@coverImage" width="330" height="400" alt="@item.Product.Name" class="pc__img">
                                                                </a>
                                                            </div>
                                                            @if (!string.IsNullOrEmpty(secondImage) && secondImage != coverImage)
                                                            {
                                                                <div class="swiper-slide">
                                                                    <a asp-controller="Product" asp-action="Details" asp-route-id="@item.Product.DetailsUrl">
                                                                        <img loading="lazy" src="~/images/products/@secondImage" width="330" height="400" alt="@item.Product.Name" class="pc__img">
                                                                    </a>
                                                                </div>
                                                            }
                                                        </div>
                                                        <span class="pc__img-prev">
                                                            <svg width="7" height="11"><use href="#icon_prev_sm" /></svg>
                                                        </span>
                                                        <span class="pc__img-next">
                                                            <svg width="7" height="11"><use href="#icon_next_sm" /></svg>
                                                        </span>
                                                    </div>
                                                }
                                                else
                                                {
                                                    <a asp-controller="Product" asp-action="Details" asp-route-id="@item.Product.DetailsUrl">
                                                        <img loading="lazy" src="~/images/products/product-placeholder.jpg" width="330" height="400" alt="@item.Product.Name" class="pc__img">
                                                    </a>
                                                }
                                                <button class="pc__btn-wl position-absolute top-0 end-0 bg-transparent border-0 js-add-wishlist active"
                                                        data-product-id="@item.ProductId"
                                                        title="Remove from Wishlist">
                                                    <svg width="16" height="16" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                                                        <use href="#icon_heart" />
                                                    </svg>
                                                </button>
                                            </div>
                                            <div class="pc__info position-relative">
                                                <p class="pc__category">@categoryName</p>
                                                <h6 class="pc__title">
                                                    <a asp-controller="Product" asp-action="Details" asp-route-id="@item.Product.DetailsUrl">@item.Product.Name</a>
                                                </h6>
                                                <div class="product-card__price d-flex">
                                                    <span class="money price">@CurrencyService.Format(item.Product.BasePrice)</span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            }
                        </div>

                        <div id="wishlistNoResults" class="text-center text-secondary fw-medium mt-4 d-none">
                            No matching items
                        </div>

                        <div id="wishlistLoading" class="text-center mt-4 d-none">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="text-center py-5">
                        <svg width="100" height="100" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" class="text-muted mb-3">
                            <use href="#icon_heart" />
                        </svg>
                        <h4 class="mb-3">Your wishlist is empty</h4>
                        <p class="text-muted mb-4">Start adding products you love to your wishlist</p>
                        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                            Continue Shopping
                        </a>
                    </div>
                }
            </div>
        </div>
    </section>
</main>

@section Scripts {
    <script>
        // Infinite scroll and search functionality
        (function () {
            const input = document.getElementById('wishlistSearchInput');
            const btn = document.getElementById('wishlistSearchBtn');
            const grid = document.getElementById('products-grid');
            const noResults = document.getElementById('wishlistNoResults');
            const loading = document.getElementById('wishlistLoading');

            if (!grid) return;

            let cards = Array.from(grid.querySelectorAll('.product-card-wrapper'));
            const itemsPerLoad = 6;
            let currentlyVisible = 0;
            let isSearching = false;
            let isLoading = false;

            // Initialize by showing first batch
            function init() {
                hideAllCards();
                showNextBatch();
                setupInfiniteScroll();
            }

            // Hide all cards initially
            function hideAllCards() {
                cards.forEach(c => c.classList.add('d-none'));
            }

            // Show next batch of items
            function showNextBatch() {
                if (isSearching || isLoading) return;

                const hidden = cards.filter(c =>
                    c.classList.contains('d-none') &&
                    c.style.display !== 'none'
                );

                if (hidden.length === 0) {
                    return false; // No more items to show
                }

                isLoading = true;
                if (loading) loading.classList.remove('d-none');

                // Simulate loading delay for smooth experience
                setTimeout(() => {
                    hidden.slice(0, itemsPerLoad).forEach(c => {
                        c.classList.remove('d-none');
                        currentlyVisible++;
                    });

                    if (loading) loading.classList.add('d-none');
                    isLoading = false;
                }, 300);

                return true;
            }

            // Setup infinite scroll
            function setupInfiniteScroll() {
                let scrollTimeout;

                window.addEventListener('scroll', () => {
                    clearTimeout(scrollTimeout);

                    scrollTimeout = setTimeout(() => {
                        if (isSearching || isLoading) return;

                        const scrollPosition = window.innerHeight + window.scrollY;
                        const pageHeight = document.documentElement.scrollHeight;
                        const threshold = 300; // Trigger 300px before bottom

                        if (scrollPosition >= pageHeight - threshold) {
                            showNextBatch();
                        }
                    }, 100);
                });
            }

            // Apply search filter
            function applyFilter() {
                const term = input.value.trim().toLowerCase();
                let visible = 0;
                isSearching = term.length > 0;

                cards = Array.from(grid.querySelectorAll('.product-card-wrapper'));

                if (term.length === 0) {
                    // Reset to infinite scroll mode
                    hideAllCards();
                    currentlyVisible = 0;
                    showNextBatch();
                } else {
                    // Show all matching items
                    cards.forEach(card => {
                        const title = card.querySelector('.pc__title')?.textContent.trim().toLowerCase() || '';
                        const category = card.querySelector('.pc__category')?.textContent.trim().toLowerCase() || '';
                        const match = title.includes(term) || category.includes(term);

                        card.classList.remove('d-none');
                        card.style.display = match ? '' : 'none';

                        if (match) visible++;
                    });
                }

                // Show/hide no results message
                if (noResults) {
                    noResults.classList.toggle('d-none', !isSearching || visible !== 0);
                }
            }

            // Event listeners
            input?.addEventListener('input', applyFilter);
            btn?.addEventListener('click', applyFilter);

            // Initialize
            init();
        })();
    </script>
}