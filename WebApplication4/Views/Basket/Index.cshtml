@model EcommerceCoza.BLL.ViewModels.BasketViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

<main class="pt-90">
    <div class="mb-4 pb-4"></div>

    <section class="shopping-cart container">
        <div class="row">
            <div class="col-lg-8">
                <div class="cart-table__wrapper">
                    @if (Model.Items.Count > 0)
                    {
                        <table class="cart-table">
                            <thead>
                                <tr>
                                    <th>@Localizer["Product"]</th>
                                    <th>@Localizer["Price"]</th>
                                    <th>@Localizer["Quantity"]</th>
                                    <th>@Localizer["Subtotal"]</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody id="basket-items">
                                @foreach (var item in Model.Items)
                                {
                                    <tr data-variant-id="@item.ProductVariantId">
                                        <td>
                                            <div class="shopping-cart__product-item">
                                                <img loading="lazy"src="~/assets/images/products/@item.ImageName" width="100" height="120" alt="@item.ProductName" />
                                            </div>
                                            <div class="shopping-cart__product-item__detail">
                                                <h4>@item.ProductName</h4>
                                                <ul class="shopping-cart__product-item__options">
                                                    <li>@Localizer["Color"]: @item.ColorName</li>
                                                </ul>
                                            </div>
                                        </td>
                                        <td>
                                            <span class="shopping-cart__product-price">$@item.Price.ToString("0.00")</span>
                                        </td>
                                        <td>
                                            <div class="qty-control position-relative">
                                                <input type="number" name="quantity" value="@item.Quantity" min="1" class="qty-control__number text-center" readonly>
                                                <div class="qty-control__reduce" data-variant-id="@item.ProductVariantId" data-change="-1">-</div>
                                                <div class="qty-control__increase" data-variant-id="@item.ProductVariantId" data-change="1">+</div>
                                            </div>
                                        </td>
                                        <td>
                                            <span class="shopping-cart__subtotal">$@item.TotalPrice.ToString("0.00")</span>
                                        </td>
                                        <td>
                                            <a href="#" class="remove-cart" data-variant-id="@item.ProductVariantId">
                                                <svg width="10" height="10" viewBox="0 0 10 10" fill="#767676" xmlns="http://www.w3.org/2000/svg">
                                                    <path d="M0.259435 8.85506L9.11449 0L10 0.885506L1.14494 9.74056L0.259435 8.85506Z" />
                                                    <path d="M0.885506 0.0889838L9.74057 8.94404L8.85506 9.82955L0 0.97449L0.885506 0.0889838Z" />
                                                </svg>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                        <div class="cart-table-footer">
                            <form action="#" class="position-relative bg-body">
                                <input class="form-control" type="text" name="coupon_code" placeholder="@Localizer["CouponCode"]">
                                <input class="btn-link fw-medium position-absolute top-0 end-0 h-100 px-4" type="submit" value="@Localizer["ApplyCoupon"]">
                            </form>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <p>@Localizer["Your Basket Is Empty"]</p>
                            <a asp-controller="Home" asp-action="Index" class="btn btn-primary">@Localizer["Continue Shopping"]</a>
                        </div>
                    }
                </div>
            </div>

            <div class="col-lg-4">
                <div class="shopping-cart__totals-wrapper">
                    <div class="sticky-content">
                        <div class="shopping-cart__totals">
                            <h3>@Localizer["CartTotals"]</h3>
                            <table class="cart-totals">
                                <tbody>
                                    <tr>
                                        <th>@Localizer["Subtotal"]</th>
                                        <td id="cart-subtotal">$@Model.TotalPrice.ToString("0.00")</td>
                                    </tr>
                                    <tr>
                                        <th>@Localizer["Shipping"]</th>
                                        <td>
                                            <div class="form-check">
                                                <input class="form-check-input form-check-input_fill" type="checkbox" value="" id="free_shipping">
                                                <label class="form-check-label" for="free_shipping">@Localizer["FreeShipping"]</label>
                                            </div>
                                            <div class="form-check">
                                                <input class="form-check-input form-check-input_fill" type="checkbox" value="" id="flat_rate">
                                                <label class="form-check-label" for="flat_rate">@Localizer["FlatRate"]</label>
                                            </div>
                                            <div class="form-check">
                                                <input class="form-check-input form-check-input_fill" type="checkbox" value="" id="local_pickup">
                                                <label class="form-check-label" for="local_pickup">@Localizer["LocalPickup"]</label>
                                            </div>
                                            <div>@Localizer["ShippingTo", "AL."]</div>
                                            <div>
                                                <a href="#" class="menu-link menu-link_us-s">@Localizer["ChangeAddress"]</a>
                                            </div>
                                        </td>
                                    </tr>

                                    <tr>
                                        <th>@Localizer["Total"]</th>
                                        <td id="cart-total">$@Model.TotalPrice.ToString("0.00")</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <div class="mobile_fixed-btn_wrapper">
                            <div class="button-wrapper container">
                                <a asp-controller="Order" asp-action="Checkout" class="btn btn-primary btn-checkout">@Localizer["ProceedToCheckout"]</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <div class="mb-4 pb-4"></div>
</main>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Remove item from basket
            $(document).on('click', '.remove-cart', function (e) {
                e.preventDefault();
                const variantId = $(this).data('variant-id');

                if (confirm('@Localizer["AreYouSureToRemove"]')) {
                    removeFromBasket(variantId);
                }
            });

            // Increase quantity
            $(document).on('click', '.qty-control__increase', function () {
                const variantId = $(this).data('variant-id');
                const change = $(this).data('change');
                changeQuantity(variantId, change);
            });

            // Decrease quantity
            $(document).on('click', '.qty-control__reduce', function () {
                const variantId = $(this).data('variant-id');
                const change = $(this).data('change');
                const currentQty = parseInt($(this).siblings('.qty-control__number').val());

                if (currentQty > 1) {
                    changeQuantity(variantId, change);
                } else {
                    if (confirm('@Localizer["AreYouSureToRemove"]')) {
                        removeFromBasket(variantId);
                    }
                }
            });

            function removeFromBasket(variantId) {
                $.ajax({
                    url: '/Basket/Remove',
                    type: 'POST',
                    data: { id: variantId },
                    success: function () {
                        // Remove the row from table
                        $(`tr[data-variant-id="${variantId}"]`).fadeOut(300, function() {
                            $(this).remove();

                            // Check if basket is empty
                            if ($('#basket-items tr').length === 0) {
                                location.reload();
                            } else {
                                updateBasketTotals();
                            }
                        });

                        // Update header cart count
                        updateHeaderCartCount();
                    },
                    error: function () {
                        alert('@Localizer["ErrorRemovingItem"]');
                    }
                });
            }

            function changeQuantity(variantId, change) {
                $.ajax({
                    url: '/Basket/ChangeQuantity',
                    type: 'POST',
                    data: {
                        productVariantId: variantId,
                        change: change
                    },
                    success: function (response) {
                        if (response.success) {
                            const item = response.basketViewModel.items.find(x => x.productVariantId === variantId);

                            if (item) {
                                // Update quantity display
                                const $row = $(`tr[data-variant-id="${variantId}"]`);
                                $row.find('.qty-control__number').val(item.quantity);
                                $row.find('.shopping-cart__subtotal').text('$' + item.totalPrice.toFixed(2));

                                // Update totals
                                updateBasketTotals();
                                updateHeaderCartCount();
                            }
                        }
                    },
                    error: function () {
                        alert('@Localizer["ErrorUpdatingQuantity"]');
                    }
                });
            }

            function updateBasketTotals() {
                $.ajax({
                    url: '/Basket/GetBasket',
                    type: 'GET',
                    success: function (data) {
                        $('#cart-subtotal').text('$' + data.totalPrice.toFixed(2));
                        $('#cart-total').text('$' + data.totalPrice.toFixed(2));
                    }
                });
            }

            function updateHeaderCartCount() {
                $.ajax({
                    url: '/Basket/GetBasket',
                    type: 'GET',
                    success: function (data) {
                        $('.header__cart-count').text(data.totalCount);
                    }
                });
            }
        });
    </script>
}