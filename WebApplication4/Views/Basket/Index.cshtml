@model EcommerceCoza.BLL.ViewModels.BasketViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

<main class="pt-90">
    <div class="mb-4 pb-4"></div>

    <section class="shopping-cart container">
        <div class="row">
            <div class="col-lg-8">
                <div class="cart-table__wrapper">
                    <table class="cart-table">
                        <thead>
                            <tr>
                                <th>@Localizer["Product"]</th>
                                <th>@Localizer["Price"]</th>
                                <th>@Localizer["Quantity"]</th>
                                <th>@Localizer["Subtotal"]</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    <div class="shopping-cart__product-item">
                                        <img loading="lazy" src="~/assets/images/cart-item-1.jpg" width="100" height="120" alt="Zessi Dresses" />
                                    </div>
                                    <div class="shopping-cart__product-item__detail">
                                        <h4>Zessi Dresses</h4>
                                        <ul class="shopping-cart__product-item__options">
                                            <li>@Localizer["Color"]: Yellow</li>
                                            <li>@Localizer["Size"]: L</li>
                                        </ul>
                                    </div>
                                </td>
                                <td>
                                    <span class="shopping-cart__product-price">$99</span>
                                </td>
                                <td>
                                    <div class="qty-control position-relative">
                                        <input type="number" name="quantity" value="3" min="1" class="qty-control__number text-center">
                                        <div class="qty-control__reduce">-</div>
                                        <div class="qty-control__increase">+</div>
                                    </div>
                                </td>
                                <td>
                                    <span class="shopping-cart__subtotal">$297</span>
                                </td>
                                <td>
                                    <a href="#" class="remove-cart">
                                        <svg width="10" height="10" viewBox="0 0 10 10" fill="#767676" xmlns="http://www.w3.org/2000/svg">
                                            <path d="M0.259435 8.85506L9.11449 0L10 0.885506L1.14494 9.74056L0.259435 8.85506Z" />
                                            <path d="M0.885506 0.0889838L9.74057 8.94404L8.85506 9.82955L0 0.97449L0.885506 0.0889838Z" />
                                        </svg>
                                    </a>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <div class="shopping-cart__product-item">
                                        <img loading="lazy" src="~/assets/images/cart-item-2.jpg" width="100" height="120" alt="Kirby T-Shirt" />
                                    </div>
                                    <div class="shopping-cart__product-item__detail">
                                        <h4>Kirby T-Shirt</h4>
                                        <ul class="shopping-cart__product-item__options">
                                            <li>@Localizer["Color"]: Yellow</li>
                                            <li>@Localizer["Size"]: L</li>
                                        </ul>
                                    </div>
                                </td>
                                <td>
                                    <span class="shopping-cart__product-price">$99</span>
                                </td>
                                <td>
                                    <div class="qty-control position-relative">
                                        <input type="number" name="quantity" value="3" min="1" class="qty-control__number text-center">
                                        <div class="qty-control__reduce">-</div>
                                        <div class="qty-control__increase">+</div>
                                    </div>
                                </td>
                                <td>
                                    <span class="shopping-cart__subtotal">$297</span>
                                </td>
                                <td>
                                    <a href="#" class="remove-cart">
                                        <svg width="10" height="10" viewBox="0 0 10 10" fill="#767676" xmlns="http://www.w3.org/2000/svg">
                                            <path d="M0.259435 8.85506L9.11449 0L10 0.885506L1.14494 9.74056L0.259435 8.85506Z" />
                                            <path d="M0.885506 0.0889838L9.74057 8.94404L8.85506 9.82955L0 0.97449L0.885506 0.0889838Z" />
                                        </svg>
                                    </a>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <div class="shopping-cart__product-item">
                                        <img loading="lazy" src="~/assets/images/cart-item-3.jpg" width="100" height="120" alt="Cobleknit Shawl" />
                                    </div>
                                    <div class="shopping-cart__product-item__detail">
                                        <h4>Cobleknit Shawl</h4>
                                        <ul class="shopping-cart__product-item__options">
                                            <li>@Localizer["Color"]: Yellow</li>
                                            <li>@Localizer["Size"]: L</li>
                                        </ul>
                                    </div>
                                </td>
                                <td>
                                    <span class="shopping-cart__product-price">$99</span>
                                </td>
                                <td>
                                    <div class="qty-control position-relative">
                                        <input type="number" name="quantity" value="3" min="1" class="qty-control__number text-center">
                                        <div class="qty-control__reduce">-</div>
                                        <div class="qty-control__increase">+</div>
                                    </div>
                                </td>
                                <td>
                                    <span class="shopping-cart__subtotal">$297</span>
                                </td>
                                <td>
                                    <a href="#" class="remove-cart">
                                        <svg width="10" height="10" viewBox="0 0 10 10" fill="#767676" xmlns="http://www.w3.org/2000/svg">
                                            <path d="M0.259435 8.85506L9.11449 0L10 0.885506L1.14494 9.74056L0.259435 8.85506Z" />
                                            <path d="M0.885506 0.0889838L9.74057 8.94404L8.85506 9.82955L0 0.97449L0.885506 0.0889838Z" />
                                        </svg>
                                    </a>
                                </td>
                            </tr>
                        </tbody>
                    </table>

                    <div class="cart-table-footer">
                        <form action="#" class="position-relative bg-body">
                            <input class="form-control" type="text" name="coupon_code" placeholder="@Localizer["CouponCode"]">
                            <input class="btn-link fw-medium position-absolute top-0 end-0 h-100 px-4" type="submit" value="@Localizer["ApplyCoupon"]">
                        </form>
                        <button class="btn btn-light">@Localizer["UpdateCart"]</button>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="shopping-cart__totals-wrapper">
                    <div class="sticky-content">
                        <div class="shopping-cart__totals">
                            <h3>@Localizer["CartTotals"]</h3>
                            <table class="cart-totals">
                                <tbody>
                                    <tr>
                                        <th>@Localizer["Subtotal"]</th>
                                        <td>$1300</td>
                                    </tr>
                                    <tr>
                                        <th>@Localizer["Shipping"]</th>
                                        <td>
                                            <div class="form-check">
                                                <input class="form-check-input form-check-input_fill" type="checkbox" value="" id="free_shipping">
                                                <label class="form-check-label" for="free_shipping">@Localizer["FreeShipping"]</label>
                                            </div>
                                            <div class="form-check">
                                                <input class="form-check-input form-check-input_fill" type="checkbox" value="" id="flat_rate">
                                                <label class="form-check-label" for="flat_rate">@Localizer["FlatRate"]</label>
                                            </div>
                                            <div class="form-check">
                                                <input class="form-check-input form-check-input_fill" type="checkbox" value="" id="local_pickup">
                                                <label class="form-check-label" for="local_pickup">@Localizer["LocalPickup"]</label>
                                            </div>
                                            <div>@Localizer["ShippingTo", "AL."]</div>
                                            <div>
                                                <a href="#" class="menu-link menu-link_us-s">@Localizer["ChangeAddress"]</a>
                                            </div>
                                        </td>
                                    </tr>
 
                                    <tr>
                                        <th>@Localizer["Total"]</th>
                                        <td>$1319</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <div class="mobile_fixed-btn_wrapper">
                            <div class="button-wrapper container">
                                <a asp-controller="Order" asp-action="Checkout" class="btn btn-primary btn-checkout">@Localizer["ProceedToCheckout"]</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <div class="mb-4 pb-4"></div>
</main>