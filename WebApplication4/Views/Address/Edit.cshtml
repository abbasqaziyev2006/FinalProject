@using EcommerceCoza.BLL.ViewModels
@model AddressUpdateViewModel

<main class="pt-90">
    <div class="mb-4 pb-4"></div>
    <section class="my-account container">
        <h2 class="page-title">Edit Address</h2>
        <div class="row">
            <div class="col-lg-3">
                @await Html.PartialAsync("_AccountMenuPartial")
            </div>

            <div class="col-lg-9">
                <div class="page-content my-account__address">
                    <form asp-action="Edit" asp-controller="Address" asp-route-id="@Model.Id" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />

                        <div class="row mt-3">
                            <div class="col-md-6">
                                <div class="form-floating my-3">
                                    <input asp-for="FirstName" class="form-control" placeholder="First name" required />
                                    <label asp-for="FirstName">First name *</label>
                                    <span class="text-danger" asp-validation-for="FirstName"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating my-3">
                                    <input asp-for="LastName" class="form-control" placeholder="Last name" required />
                                    <label asp-for="LastName">Last name *</label>
                                    <span class="text-danger" asp-validation-for="LastName"></span>
                                </div>
                            </div>

                            <div class="col-md-12">
                                <div class="form-floating my-3">
                                    <input asp-for="Phone" class="form-control" placeholder="Phone" required />
                                    <label asp-for="Phone">Phone *</label>
                                    <span class="text-danger" asp-validation-for="Phone"></span>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-floating my-3">
                                    <input asp-for="PostalCode" class="form-control" placeholder="Postal code" required />
                                    <label asp-for="PostalCode">Postal code *</label>
                                    <span class="text-danger" asp-validation-for="PostalCode"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-floating my-3">
                                    <input asp-for="City" class="form-control" placeholder="City" required />
                                    <label asp-for="City">City *</label>
                                    <span class="text-danger" asp-validation-for="City"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-floating my-3">
                                    <input asp-for="Country" class="form-control" placeholder="Country" required />
                                    <label asp-for="Country">Country *</label>
                                    <span class="text-danger" asp-validation-for="Country"></span>
                                </div>
                            </div>

                            <div class="col-md-12">
                                <div class="form-floating my-3">
                                    <input asp-for="Adress" class="form-control" placeholder="Address" required />
                                    <label asp-for="Adress">Address *</label>
                                    <span class="text-danger" asp-validation-for="Adress"></span>
                                </div>
                            </div>

                            <div class="col-md-12">
                                <div class="form-floating my-3">
                                    <input asp-for="Company" class="form-control" placeholder="Company" />
                                    <label asp-for="Company">Company</label>
                                </div>
                            </div>

                            <div class="col-md-12 my-2">
                                <div class="form-check">
                                    <input class="form-check-input" asp-for="IsDefault" />
                                    <label class="form-check-label" asp-for="IsDefault">Set as default</label>
                                </div>
                            </div>
                        </div>

                        <div class="mt-3 d-flex gap-2">
                            <button type="submit" class="btn btn-primary">Save</button>
                            <a asp-action="Index" asp-controller="Address" class="btn btn-light">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
</main>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}