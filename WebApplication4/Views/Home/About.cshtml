@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Localization
@inject IViewLocalizer Localizer

<main class="pt-90">
    <div class="mb-5 pb-5"></div>
    <section class="contact-us container">
        <div class="mw-930">
            <h2 class="page-title mt-5 mb-5">@Localizer["PageTitle"]</h2>
        </div>

        <div class="about-us__content pb-5 mb-5">
            <p class="mb-5">
                <img loading="lazy"
                     class="w-100 h-auto d-block"
                     src="~/assets/images/about/about-1.jpg"
                     width="1410"
                     height="550"
                     alt="@Localizer["ImageAltAbout"]" />
            </p>
            <div class="mw-930">
                <h3 class="mb-4">@Localizer["StoryHeading"]</h3>
                <p class="fs-6 fw-medium mb-4">@Localizer["StoryParagraph1"]</p>
                <p class="mb-4">@Localizer["StoryParagraph2"]</p>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <h5 class="mb-3">@Localizer["MissionHeading"]</h5>
                        <p class="mb-3">@Localizer["MissionText"]</p>
                    </div>
                    <div class="col-md-6">
                        <h5 class="mb-3">@Localizer["VisionHeading"]</h5>
                        <p class="mb-3">@Localizer["VisionText"]</p>
                    </div>
                </div>
            </div>
            <div class="mw-930 d-lg-flex align-items-lg-center">
                <div class="image-wrapper col-lg-6">
                    <img class="h-auto"
                         loading="lazy"
                         src="~/assets/images/about/about-1.jpg"
                         width="450"
                         height="500"
                         alt="@Localizer["ImageAltAbout"]" />
                </div>
                <div class="content-wrapper col-lg-6 px-lg-4">
                    <h5 class="mb-3">@Localizer["CompanyHeading"]</h5>
                    <p>@Localizer["CompanyText"]</p>
                </div>
            </div>
        </div>
    </section>
</main>