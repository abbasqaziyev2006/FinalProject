@using EcommerceCoza.BLL.ViewModels
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ShopViewModel model = Model;
    var products = model.Products;
    var categories = model.Categories;
}

<main class="pt-90">
    <section class="shop-main container d-flex pt-4 pt-xl-5">
        <!-- Sidebar Filters -->
        <div class="shop-sidebar side-sticky bg-body" id="shopFilter">
            <div class="aside-header d-flex d-lg-none align-items-center">
                <h3 class="text-uppercase fs-6 mb-0">@Localizer["FilterBy"]</h3>
                <button class="btn-close-lg js-close-aside btn-close-aside ms-auto"></button>
            </div>

            <div class="pt-4 pt-lg-0"></div>

            <!-- Categories Filter -->
            <div class="accordion" id="filters-accordion">
                <!-- Categories -->
                <div class="accordion-item mb-4 pb-3 border-0">
                    <h5 class="accordion-header" id="accordion-heading-categories">
                        <button class="accordion-button p-0 border-0 fs-5 text-uppercase collapsed" type="button" data-bs-toggle="collapse"
                                data-bs-target="#accordion-filter-categories" aria-expanded="false" aria-controls="accordion-filter-categories">
                            @Localizer["ProductCategories"]
                            <svg class="accordion-button__icon type2" viewBox="0 0 10 6" xmlns="http://www.w3.org/2000/svg">
                                <g aria-hidden="true" stroke="none" fill-rule="evenodd">
                                    <path d="M5.35668 0.159286C5.16235 -0.053094 4.83769 -0.0530941 4.64287 0.159286L0.147611 5.05963C-0.0492049 5.27473 -0.049205 5.62357 0.147611 5.83813C0.344427 6.05323 0.664108 6.05323 0.860924 5.83813L5 1.32706L9.13858 5.83867C9.33589 6.05378 9.65507 6.05378 9.85239 5.83867C10.0492 5.62357 10.0492 5.27473 9.85239 5.06018L5.35668 0.159286Z" />
                                </g>
                            </svg>
                        </button>
                    </h5>
                    <div id="accordion-filter-categories" class="accordion-collapse collapse border-0"
                         aria-labelledby="accordion-heading-categories" data-bs-parent="#filters-accordion">
                        <div class="accordion-body px-0 pb-0 pt-3">
                            <ul class="list list-unstyled mb-0">
                                <li class="list-item mb-2">
                                    <a href="#" class="menu-link py-1 text-decoration-none" data-filter="category" data-category-id="dresses">@Localizer["Dresses"]</a>
                                </li>
                                <li class="list-item mb-2">
                                    <a href="#" class="menu-link py-1 text-decoration-none" data-filter="category" data-category-id="shorts">@Localizer["Shorts"]</a>
                                </li>
                                <li class="list-item mb-2">
                                    <a href="#" class="menu-link py-1 text-decoration-none" data-filter="category" data-category-id="sweatshirts">@Localizer["Sweatshirts"]</a>
                                </li>
                                <li class="list-item mb-2">
                                    <a href="#" class="menu-link py-1 text-decoration-none" data-filter="category" data-category-id="swimwear">Swimwear</a>
                                </li>
                                <li class="list-item mb-2">
                                    <a href="#" class="menu-link py-1 text-decoration-none" data-filter="category" data-category-id="jackets">@Localizer["Jackets"]</a>
                                </li>
                                <li class="list-item mb-2">
                                    <a href="#" class="menu-link py-1 text-decoration-none" data-filter="category" data-category-id="tshirts">@Localizer["TShirts"]</a>
                                </li>
                                <li class="list-item mb-2">
                                    <a href="#" class="menu-link py-1 text-decoration-none" data-filter="category" data-category-id="jeans">@Localizer["Jeans"]</a>
                                </li>
                                <li class="list-item mb-2">
                                    <a href="#" class="menu-link py-1 text-decoration-none" data-filter="category" data-category-id="trousers">@Localizer["Trousers"]</a>
                                </li>
                                <li class="list-item mb-2">
                                    <a href="#" class="menu-link py-1 text-decoration-none" data-filter="category" data-category-id="men">Men</a>
                                </li>
                                <li class="list-item">
                                    <a href="#" class="menu-link py-1 text-decoration-none" data-filter="category" data-category-id="jumpers">@Localizer["Jumpers"]</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>

                <!-- Color Filter -->
                <div class="accordion-item mb-4 pb-3 border-0">
                    <h5 class="accordion-header" id="accordion-heading-colors">
                        <button class="accordion-button p-0 border-0 fs-5 text-uppercase collapsed" type="button" data-bs-toggle="collapse"
                                data-bs-target="#accordion-filter-colors" aria-expanded="false" aria-controls="accordion-filter-colors">
                            @Localizer["Color"]
                            <svg class="accordion-button__icon type2" viewBox="0 0 10 6" xmlns="http://www.w3.org/2000/svg">
                                <g aria-hidden="true" stroke="none" fill-rule="evenodd">
                                    <path d="M5.35668 0.159286C5.16235 -0.053094 4.83769 -0.0530941 4.64287 0.159286L0.147611 5.05963C-0.0492049 5.27473 -0.049205 5.62357 0.147611 5.83813C0.344427 6.05323 0.664108 6.05323 0.860924 5.83813L5 1.32706L9.13858 5.83867C9.33589 6.05378 9.65507 6.05378 9.85239 5.83867C10.0492 5.62357 10.0492 5.27473 9.85239 5.06018L5.35668 0.159286Z" />
                                </g>
                            </svg>
                        </button>
                    </h5>
                    <div id="accordion-filter-colors" class="accordion-collapse collapse border-0"
                         aria-labelledby="accordion-heading-colors" data-bs-parent="#filters-accordion">
                        <div class="accordion-body px-0 pb-0 pt-3">
                            <div class="d-flex flex-wrap gap-2">
                                <a href="#" class="swatch-color js-filter" style="background-color: #0a2472;" title="Dark Blue"></a>
                                <a href="#" class="swatch-color js-filter" style="background-color: #d7bb4f;" title="Gold"></a>
                                <a href="#" class="swatch-color js-filter" style="background-color: #282828;" title="Dark Gray"></a>
                                <a href="#" class="swatch-color js-filter" style="background-color: #b1d6e8;" title="Light Blue"></a>
                                <a href="#" class="swatch-color js-filter" style="background-color: #9c7539;" title="Brown"></a>
                                <a href="#" class="swatch-color js-filter" style="background-color: #d29b48;" title="Orange"></a>
                                <a href="#" class="swatch-color js-filter" style="background-color: #e6ae95;" title="Beige"></a>
                                <a href="#" class="swatch-color js-filter" style="background-color: #d76b67;" title="Red"></a>
                                <a href="#" class="swatch-color js-filter" style="background-color: #bababa;" title="Gray"></a>
                                <a href="#" class="swatch-color js-filter" style="background-color: #bfdcc4;" title="Mint"></a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Sizes Filter -->
                <div class="accordion-item mb-4 pb-3 border-0">
                    <h5 class="accordion-header" id="accordion-heading-sizes">
                        <button class="accordion-button p-0 border-0 fs-5 text-uppercase collapsed" type="button" data-bs-toggle="collapse"
                                data-bs-target="#accordion-filter-sizes" aria-expanded="false" aria-controls="accordion-filter-sizes">
                            @Localizer["Sizes"]
                            <svg class="accordion-button__icon type2" viewBox="0 0 10 6" xmlns="http://www.w3.org/2000/svg">
                                <g aria-hidden="true" stroke="none" fill-rule="evenodd">
                                    <path d="M5.35668 0.159286C5.16235 -0.053094 4.83769 -0.0530941 4.64287 0.159286L0.147611 5.05963C-0.0492049 5.27473 -0.049205 5.62357 0.147611 5.83813C0.344427 6.05323 0.664108 6.05323 0.860924 5.83813L5 1.32706L9.13858 5.83867C9.33589 6.05378 9.65507 6.05378 9.85239 5.83867C10.0492 5.62357 10.0492 5.27473 9.85239 5.06018L5.35668 0.159286Z" />
                                </g>
                            </svg>
                        </button>
                    </h5>
                    <div id="accordion-filter-sizes" class="accordion-collapse collapse border-0"
                         aria-labelledby="accordion-heading-sizes" data-bs-parent="#filters-accordion">
                        <div class="accordion-body px-0 pb-0 pt-3">
                            <div class="d-flex flex-wrap gap-2">
                                <button class="swatch-size btn btn-sm btn-outline-dark js-filter" data-size="xs">XS</button>
                                <button class="swatch-size btn btn-sm btn-outline-dark js-filter" data-size="s">S</button>
                                <button class="swatch-size btn btn-sm btn-outline-dark js-filter" data-size="m">M</button>
                                <button class="swatch-size btn btn-sm btn-outline-dark js-filter" data-size="l">L</button>
                                <button class="swatch-size btn btn-sm btn-outline-dark js-filter" data-size="xl">XL</button>
                                <button class="swatch-size btn btn-sm btn-outline-dark js-filter" data-size="xxl">XXL</button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Brands Filter -->
                <div class="accordion-item mb-4 pb-3 border-0">
                    <h5 class="accordion-header" id="accordion-heading-brands">
                        <button class="accordion-button p-0 border-0 fs-5 text-uppercase collapsed" type="button" data-bs-toggle="collapse"
                                data-bs-target="#accordion-filter-brands" aria-expanded="false" aria-controls="accordion-filter-brands">
                            @Localizer["Brands"]
                            <svg class="accordion-button__icon type2" viewBox="0 0 10 6" xmlns="http://www.w3.org/2000/svg">
                                <g aria-hidden="true" stroke="none" fill-rule="evenodd">
                                    <path d="M5.35668 0.159286C5.16235 -0.053094 4.83769 -0.0530941 4.64287 0.159286L0.147611 5.05963C-0.0492049 5.27473 -0.049205 5.62357 0.147611 5.83813C0.344427 6.05323 0.664108 6.05323 0.860924 5.83813L5 1.32706L9.13858 5.83867C9.33589 6.05378 9.65507 6.05378 9.85239 5.83867C10.0492 5.62357 10.0492 5.27473 9.85239 5.06018L5.35668 0.159286Z" />
                                </g>
                            </svg>
                        </button>
                    </h5>
                    <div id="accordion-filter-brands" class="accordion-collapse collapse border-0"
                         aria-labelledby="accordion-heading-brands" data-bs-parent="#filters-accordion">
                        <div class="accordion-body px-0 pb-0 pt-3">
                            <ul class="list list-unstyled mb-0">
                                <li class="list-item mb-2">
                                    <label class="form-check">
                                        <input class="form-check-input brand-filter" type="checkbox" data-brand="adidas" value="adidas">
                                        <span class="form-check-label">Adidas</span>
                                    </label>
                                </li>
                                <li class="list-item mb-2">
                                    <label class="form-check">
                                        <input class="form-check-input brand-filter" type="checkbox" data-brand="balmain" value="balmain">
                                        <span class="form-check-label">Balmain</span>
                                    </label>
                                </li>
                                <li class="list-item mb-2">
                                    <label class="form-check">
                                        <input class="form-check-input brand-filter" type="checkbox" data-brand="balenciaga" value="balenciaga">
                                        <span class="form-check-label">Balenciaga</span>
                                    </label>
                                </li>
                                <li class="list-item mb-2">
                                    <label class="form-check">
                                        <input class="form-check-input brand-filter" type="checkbox" data-brand="burberry" value="burberry">
                                        <span class="form-check-label">Burberry</span>
                                    </label>
                                </li>
                                <li class="list-item mb-2">
                                    <label class="form-check">
                                        <input class="form-check-input brand-filter" type="checkbox" data-brand="kenzo" value="kenzo">
                                        <span class="form-check-label">Kenzo</span>
                                    </label>
                                </li>
                                <li class="list-item mb-2">
                                    <label class="form-check">
                                        <input class="form-check-input brand-filter" type="checkbox" data-brand="givenchy" value="givenchy">
                                        <span class="form-check-label">Givenchy</span>
                                    </label>
                                </li>
                                <li class="list-item">
                                    <label class="form-check">
                                        <input class="form-check-input brand-filter" type="checkbox" data-brand="zara" value="zara">
                                        <span class="form-check-label">Zara</span>
                                    </label>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>

                <!-- Price Filter -->
                <div class="accordion-item mb-4 border-0">
                    <h5 class="accordion-header" id="accordion-heading-price">
                        <button class="accordion-button p-0 border-0 fs-5 text-uppercase collapsed" type="button" data-bs-toggle="collapse"
                                data-bs-target="#accordion-filter-price" aria-expanded="false" aria-controls="accordion-filter-price">
                            @Localizer["Price"]
                            <svg class="accordion-button__icon type2" viewBox="0 0 10 6" xmlns="http://www.w3.org/2000/svg">
                                <g aria-hidden="true" stroke="none" fill-rule="evenodd">
                                    <path d="M5.35668 0.159286C5.16235 -0.053094 4.83769 -0.0530941 4.64287 0.159286L0.147611 5.05963C-0.0492049 5.27473 -0.049205 5.62357 0.147611 5.83813C0.344427 6.05323 0.664108 6.05323 0.860924 5.83813L5 1.32706L9.13858 5.83867C9.33589 6.05378 9.65507 6.05378 9.85239 5.83867C10.0492 5.62357 10.0492 5.27473 9.85239 5.06018L5.35668 0.159286Z" />
                                </g>
                            </svg>
                        </button>
                    </h5>
                    <div id="accordion-filter-price" class="accordion-collapse collapse border-0"
                         aria-labelledby="accordion-heading-price" data-bs-parent="#filters-accordion">
                        <div class="accordion-body px-0 pb-0 pt-3">
                            <input class="price-range-slider" type="text" name="price_range" value="" data-slider-min="10"
                                   data-slider-max="1000" data-slider-step="5" data-slider-value="[10,1000]" data-currency="$" />
                            <div class="price-range__info d-flex align-items-center mt-3">
                                <div class="me-auto">
                                    <span class="text-secondary">@Localizer["Min"]: </span>
                                    <span class="price-range__min fw-medium">$10</span>
                                </div>
                                <div>
                                    <span class="text-secondary">@Localizer["Max"]: </span>
                                    <span class="price-range__max fw-medium">$1000</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Reset Button -->
                <div class="mt-4 pt-3 border-top">
                    <button class="btn btn-outline-dark w-100 text-uppercase fw-medium btn-sm js-reset-filters">
                        @Localizer["ResetFilters"]
                    </button>
                </div>
            </div>
        </div>

        <!-- Main Shop Content -->
        <div class="shop-list flex-grow-1">
            <!-- Banner Slider -->
            <div class="swiper-container js-swiper-slider slideshow slideshow_small slideshow_split" data-settings='{
            "autoplay": {
              "delay": 5000
            },
            "slidesPerView": 1,
            "effect": "fade",
            "loop": true,
            "pagination": {
              "el": ".slideshow-pagination",
              "type": "bullets",
              "clickable": true
            }
          }'>
                <div class="swiper-wrapper">
                    <div class="swiper-slide">
                        <div class="slide-split h-100 d-block d-md-flex overflow-hidden">
                            <div class="slide-split_text position-relative d-flex align-items-center"
                                 style="background-color: #f5e6e0;">
                                <div class="slideshow-text container p-3 p-xl-5">
                                    <h2 class="text-uppercase section-title fw-normal mb-3 animate animate_fade animate_btt animate_delay-2">
                                        @Localizer["WomenAccessories"]
                                    </h2>
                                    <p class="mb-0 animate animate_fade animate_btt animate_delay-5">
                                        @Localizer["AccessoriesText"]
                                    </p>
                                </div>
                            </div>
                            <div class="slide-split_media position-relative">
                                <div class="slideshow-bg" style="background-color: #f5e6e0;">
                                    <img loading="lazy" src="~/assets/images/shop/shop_banner3.jpg" width="630" height="450"
                                         alt="Women's accessories" class="slideshow-bg__img object-fit-cover" />
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="swiper-slide">
                        <div class="slide-split h-100 d-block d-md-flex overflow-hidden">
                            <div class="slide-split_text position-relative d-flex align-items-center"
                                 style="background-color: #f5e6e0;">
                                <div class="slideshow-text container p-3 p-xl-5">
                                    <h2 class="text-uppercase section-title fw-normal mb-3 animate animate_fade animate_btt animate_delay-2">
                                        @Localizer["WomenAccessories"]
                                    </h2>
                                    <p class="mb-0 animate animate_fade animate_btt animate_delay-5">
                                        @Localizer["AccessoriesText"]
                                    </p>
                                </div>
                            </div>
                            <div class="slide-split_media position-relative">
                                <div class="slideshow-bg" style="background-color: #f5e6e0;">
                                    <img loading="lazy" src="~/assets/images/shop/shop_banner3.jpg" width="630" height="450"
                                         alt="Women's accessories" class="slideshow-bg__img object-fit-cover" />
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="swiper-slide">
                        <div class="slide-split h-100 d-block d-md-flex overflow-hidden">
                            <div class="slide-split_text position-relative d-flex align-items-center"
                                 style="background-color: #f5e6e0;">
                                <div class="slideshow-text container p-3 p-xl-5">
                                    <h2 class="text-uppercase section-title fw-normal mb-3 animate animate_fade animate_btt animate_delay-2">
                                        @Localizer["WomenAccessories"]
                                    </h2>
                                    <p class="mb-0 animate animate_fade animate_btt animate_delay-5">
                                        @Localizer["AccessoriesText"]
                                    </p>
                                </div>
                            </div>
                            <div class="slide-split_media position-relative">
                                <div class="slideshow-bg" style="background-color: #f5e6e0;">
                                    <img loading="lazy" src="~/assets/images/shop/shop_banner3.jpg" width="630" height="450"
                                         alt="Women's accessories" class="slideshow-bg__img object-fit-cover" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="container p-3 p-xl-5">
                    <div class="slideshow-pagination d-flex align-items-center position-absolute bottom-0 mb-4 pb-xl-2"></div>
                </div>
            </div>

            <div class="mb-3 pb-2 pb-xl-3"></div>

            <!-- Shop Controls -->
            <div class="d-flex justify-content-between mb-4 pb-md-2 flex-wrap gap-3">
                <div class="breadcrumb mb-0 d-none d-md-block">
                    <a href="#" class="menu-link menu-link_us-s text-uppercase fw-medium">@Localizer["Home"]</a>
                    <span class="breadcrumb-separator menu-link fw-medium ps-1 pe-1">/</span>
                    <a href="#" class="menu-link menu-link_us-s text-uppercase fw-medium">@Localizer["TheShop"]</a>
                </div>

                <div class="shop-acs d-flex align-items-center justify-content-between gap-3 flex-wrap">
                    <select class="shop-acs__select form-select w-auto border-0 py-0" aria-label="Sort Items" name="sort-products">
                        <option value="default" selected>@Localizer["DefaultSorting"]</option>
                        <option value="featured">@Localizer["Featured"]</option>
                        <option value="best-selling">@Localizer["BestSelling"]</option>
                        <option value="alphabetic-az">@Localizer["AlphabeticallyAZ"]</option>
                        <option value="alphabetic-za">@Localizer["AlphabeticallyZA"]</option>
                        <option value="price-low-high">@Localizer["PriceLowHigh"]</option>
                        <option value="price-high-low">@Localizer["PriceHighLow"]</option>
                        <option value="date-old-new">@Localizer["DateOldNew"]</option>
                        <option value="date-new-old">@Localizer["DateNewOld"]</option>
                    </select>

                    <div class="shop-asc__seprator mx-2 bg-light d-none d-md-block" style="width: 1px; height: 20px;"></div>

                    <div class="col-size align-items-center d-none d-lg-flex gap-2">
                        <span class="text-uppercase fw-medium">@Localizer["View"]</span>
                        <button class="btn-link fw-medium js-cols-size" data-target="products-grid" data-cols="2">2</button>
                        <button class="btn-link fw-medium js-cols-size" data-target="products-grid" data-cols="3">3</button>
                        <button class="btn-link fw-medium js-cols-size" data-target="products-grid" data-cols="4">4</button>
                    </div>

                    <div class="shop-filter d-flex align-items-center d-lg-none">
                        <button class="btn-link btn-link_f d-flex align-items-center ps-0 js-open-aside" data-aside="shopFilter">
                            <svg class="d-inline-block align-middle me-2" width="14" height="10" viewBox="0 0 14 10" fill="none"
                                 xmlns="http://www.w3.org/2000/svg">
                                <use href="#icon_filter" />
                            </svg>
                            <span class="text-uppercase fw-medium d-inline-block align-middle">@Localizer["Filter"]</span>
                        </button>
                    </div>
                </div>
            </div>

            <!-- Products Grid -->
            <div class="products-grid row row-cols-2 row-cols-md-3 g-3" id="products-grid">
                <div class="product-card-wrapper" data-product-category="dresses" data-product-price="29" data-product-brand="adidas">
                    <div class="product-card mb-3 mb-md-4 mb-xxl-5">
                        <div class="pc__img-wrapper">
                            <div class="swiper-container background-img js-swiper-slider" data-settings='{"resizeObserver": true}'>
                                <div class="swiper-wrapper">
                                    <div class="swiper-slide">
                                        <a asp-controller="Product" asp-action="Details">
                                            <img loading="lazy" src="~/assets/images/products/product_1.jpg" width="330"
                                                 height="400" alt="Cropped Faux leather Jacket" class="pc__img">
                                        </a>
                                    </div>
                                    <div class="swiper-slide">
                                        <a asp-controller="Product" asp-action="Details">
                                            <img loading="lazy" src="~/assets/images/products/product_1-1.jpg"
                                                 width="330" height="400" alt="Cropped Faux leather Jacket" class="pc__img">
                                        </a>
                                    </div>
                                </div>
                                <span class="pc__img-prev">
                                    <svg width="7" height="11" viewBox="0 0 7 11" xmlns="http://www.w3.org/2000/svg">
                                        <use href="#icon_prev_sm" />
                                    </svg>
                                </span>
                                <span class="pc__img-next">
                                    <svg width="7" height="11" viewBox="0 0 7 11" xmlns="http://www.w3.org/2000/svg">
                                        <use href="#icon_next_sm" />
                                    </svg>
                                </span>
                            </div>
                            <button class="pc__atc btn anim_appear-bottom btn position-absolute border-0 text-uppercase fw-medium js-add-cart js-open-aside"
                                    data-aside="cartDrawer" title="Add To Cart">
                                @Localizer["AddToCart"]
                            </button>
                        </div>

                        <div class="pc__info position-relative">
                            <p class="pc__category">@Localizer["Dresses"]</p>
                            <h6 class="pc__title"><a asp-controller="Product" asp-action="Details">Cropped Faux Leather Jacket</a></h6>
                            <div class="product-card__price d-flex">
                                <span class="money price">$29</span>
                            </div>
                            <!-- Hidden filter data -->
