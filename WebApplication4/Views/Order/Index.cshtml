@using EcommerceCoza.BLL.ViewModels
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@inject WebApplication4.Services.ICurrencyService CurrencyService
@model List<OrderViewModel>

<main class="pt-90">
    <div class="mb-5 pb-5"></div>
    <section class="my-account container">
        <h2 class="page-title mt-4 mb-5">@Localizer["Orders"]</h2>
        <div class="row">
            <div class="col-lg-2">
                <ul class="account-nav">
                    <li><a asp-controller="Account" asp-action="Index" class="menu-link menu-link_us-s">@Localizer["Dashboard"]</a></li>
                    <li><a asp-controller="Order" asp-action="Index" class="menu-link menu-link_us-s">@Localizer["Orders"]</a></li>
                    <li><a asp-controller="Address" asp-action="Index" class="menu-link menu-link_us-s">@Localizer["Addresses"]</a></li>
                    <li><a asp-controller="Account" asp-action="Edit" class="menu-link menu-link_us-s">@Localizer["AccountDetails"]</a></li>
                    <li><a asp-controller="Wishlist" asp-action="Index" class="menu-link menu-link_us-s">@Localizer["Wishlist"]</a></li>
                    <li><a asp-controller="Account" asp-action="Logout" class="menu-link menu-link_us-s">@Localizer["Logout"]</a></li>
                </ul>
            </div>

            <div class="col-lg-10">
                <div class="wg-table table-all-user">
                    <div class="table-responsive">
                        @if (Model == null || Model.Count == 0)
                        {
                            <div class="alert alert-info">@Localizer["No Orders"]</div>
                        }
                        else
                        {
                            <table class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th style="width: 80px">@Localizer["OrderNo"]</th>
                                        <th>@Localizer["Name"]</th>
                                        <th class="text-center">@Localizer["Phone"]</th>
                                        <th class="text-center">@Localizer["Subtotal"]</th>
                                        <th class="text-center">@Localizer["Tax"]</th>
                                        <th class="text-center">@Localizer["Total"]</th>
                                        <th class="text-center">@Localizer["Status"]</th>
                                        <th class="text-center">@Localizer["OrderDate"]</th>
                                        <th class="text-center">@Localizer["Items"]</th>
                                        <th class="text-center">@Localizer["DeliveredOn"]</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var order in Model)
                                    {
                                        <tr>
                                            <td class="text-center">@order.Id</td>
                                            <td class="text-center">@(order.Address?.FirstName ?? "N/A") @(order.Address?.LastName ?? "")</td>
                                            <td class="text-center">@order.Phone</td>
                                            <td class="text-center">@CurrencyService.Format(order.TotalPrice)</td>
                                            <td class="text-center">@CurrencyService.Format(order.Tax)</td>
                                            <td class="text-center">@CurrencyService.Format(order.EndPrice)</td>
                                            <td class="text-center">
                                                @switch (order.OrderStatus)
                                                {
                                                    case ECommerceCoza.DAL.DataContext.Entities.OrderStatus.Completed:
                                                        <span class="badge bg-success">@Localizer["Completed"]</span>
                                                        break;
                                                    case ECommerceCoza.DAL.DataContext.Entities.OrderStatus.Cancelled:
                                                        <span class="badge bg-danger">@Localizer["Cancelled"]</span>
                                                        break;
                                                    case ECommerceCoza.DAL.DataContext.Entities.OrderStatus.InProgress:
                                                        <span class="badge bg-warning">@Localizer["InProgress"]</span>
                                                        break;
                                                    case ECommerceCoza.DAL.DataContext.Entities.OrderStatus.OnHold:
                                                        <span class="badge bg-secondary">@Localizer["OnHold"]</span>
                                                        break;
                                                    default:
                                                        <span class="badge bg-info">@order.OrderStatus</span>
                                                        break;
                                                }
                                            </td>
                                            <td class="text-center">@order.FormattedCreatedAt</td>
                                            <td class="text-center">@order.TotalCount</td>
                                            <td class="text-center">@order.FormattedDeliveredDate</td>
                                            <td class="text-center">
                                                <a asp-controller="Order" asp-action="Details" asp-route-id="@order.Id">
                                                    <div class="list-icon-function view-icon">
                                                        <div class="item eye">
                                                            <i class="fa fa-eye"></i>
                                                        </div>
                                                    </div>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>