@using ECommerceCoza.DAL.DataContext.Entities
@using EcommerceCoza.BLL.ViewModels
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@inject WebApplication4.Services.ICurrencyService CurrencyService
@model OrderViewModel

<main class="pt-90" style="padding-top: 0px;">
    <div class="mb-4 pb-4"></div>
    <section class="my-account container">
        <h2 class="page-title">@Localizer["OrderDetails"]</h2>

        <div class="row">
            <!-- Order Details -->
            <div class="col-12">
                <div class="wg-box mt-5 mb-5">
                    <div class="row mb-3">
                        <div class="col-6">
                            <h5>@Localizer["OrderedDetails"]</h5>
                        </div>
                        <div class="col-6 text-end">
                            <a class="btn btn-sm btn-danger" asp-action="Index">@Localizer["Back"]</a>
                        </div>
                    </div>

                    <!-- Order Info Cards for Better Responsive -->
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="card border">
                                <div class="card-body p-3">
                                    <div class="mb-2">
                                        <small class="text-muted d-block">@Localizer["OrderNo"]</small>
                                        <strong>#@Model.Id</strong>
                                    </div>
                                    <div class="mb-2">
                                        <small class="text-muted d-block">@Localizer["OrderDate"]</small>
                                        <span>@Model.FormattedCreatedAt</span>
                                    </div>
                                    <div>
                                        <small class="text-muted d-block">@Localizer["OrderStatus"]</small>
                                        @switch (Model.OrderStatus)
                                        {
                                            case OrderStatus.Completed:
                                                <span class="badge bg-success">@Localizer["Completed"]</span>
                                                break;
                                            case OrderStatus.Cancelled:
                                                <span class="badge bg-danger">@Localizer["Cancelled"]</span>
                                                break;
                                            default:
                                                <span class="badge bg-warning">@Model.OrderStatus</span>
                                                break;
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="card border">
                                <div class="card-body p-3">
                                    <div class="mb-2">
                                        <small class="text-muted d-block">@Localizer["Mobile"]</small>
                                        <span>@(Model.Address?.Phone ?? "N/A")</span>
                                    </div>
                                    <div class="mb-2">
                                        <small class="text-muted d-block">@Localizer["DeliveredDate"]</small>
                                        <span>@Model.FormattedDeliveredDate</span>
                                    </div>
                                    <div>
                                        <small class="text-muted d-block">@Localizer["CanceledDate"]</small>
                                        <span>@Model.FormattedCanceledDate</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Ordered Items -->
            <div class="col-12">
                <div class="wg-box">
                    <h5 class="mb-3">@Localizer["OrderedItems"]</h5>
                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th>@Localizer["Name"]</th>
                                    <th class="text-center" style="width: 100px;">@Localizer["Price"]</th>
                                    <th class="text-center" style="width: 80px;">@Localizer["Quantity"]</th>
                                    <th class="text-center" style="width: 100px;">@Localizer["Color"]</th>
                                    <th class="text-end" style="width: 120px;">@Localizer["Total"]</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.OrderDetails)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <img src="~/images/products/@item.ProductVariant?.CoverImageName"
                                                     alt="@item.ProductVariant?.ProductName"
                                                     class="me-3 rounded"
                                                     style="width: 60px; height: 60px; object-fit: cover;">
                                                <div>
                                                    <div class="fw-medium">@item.ProductVariant?.ProductName</div>
                                                    @if (!string.IsNullOrEmpty(item.ProductVariant?.Size))
                                                    {
                                                        <small class="text-muted">Size: @item.ProductVariant?.Size</small>
                                                    }
                                                </div>
                                            </div>
                                        </td>
                                        <td class="text-center">
                                            <span class="text-nowrap">@CurrencyService.Format(item.ProductVariant?.Priced ?? 0)</span>
                                        </td>
                                        <td class="text-center">
                                            <span class="badge bg-secondary">@item.Quantity</span>
                                        </td>
                                        <td class="text-center">
                                            <span class="text-nowrap">@item.ProductVariant?.ColorName</span>
                                        </td>
                                        <td class="text-end">
                                            <strong class="text-nowrap">@CurrencyService.Format(item.TotalPrice)</strong>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Shipping Address -->
            <div class="col-md-6">
                <div class="wg-box mt-4">
                    <h5 class="mb-3">@Localizer["ShippingAddress"]</h5>
                    <div class="card border-0 bg-light">
                        <div class="card-body">
                            <p class="mb-2"><strong>@Model.Address?.FirstName @Model.Address?.LastName</strong></p>
                            @if (!string.IsNullOrEmpty(Model.Address?.Company))
                            {
                                <p class="mb-2 text-muted small">@Model.Address?.Company</p>
                            }
                            <p class="mb-2">@Model.Address?.Adress</p>
                            <p class="mb-2">@Model.Address?.City, @Model.Address?.Country</p>
                            <p class="mb-2">@Localizer["PostalCode"]: @Model.Address?.PostalCode</p>
                            <p class="mb-0">
                                <i class="fas fa-phone me-2"></i>
                                <strong>@Model.Address?.Phone</strong>
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Transactions -->
            <div class="col-md-6">
                <div class="wg-box mt-4">
                    <h5 class="mb-3">@Localizer["Transactions"]</h5>
                    <div class="card border-0 bg-light">
                        <div class="card-body">
                            <div class="d-flex justify-content-between mb-2 pb-2">
                                <span>@Localizer["Subtotal"]</span>
                                <span>@CurrencyService.Format(Model.TotalPrice)</span>
                            </div>
                            <div class="d-flex justify-content-between mb-2 pb-2 border-bottom">
                                <span class="text-danger">@Localizer["Discount"]</span>
                                <span class="text-danger">-@CurrencyService.Format(Model.DiscountAmount)</span>
                            </div>
                            <div class="d-flex justify-content-between mb-3 pb-3 border-bottom">
                                <strong class="fs-5">@Localizer["Total"]</strong>
                                <strong class="fs-5 text-primary">@CurrencyService.Format(Model.EndPrice)</strong>
                            </div>
                            <div class="d-flex justify-content-between mb-2">
                                <span class="text-muted">@Localizer["PaymentMethod"]</span>
                                <span class="fw-medium">@Model.PaymentMethod</span>
                            </div>
                            <div class="d-flex justify-content-between">
                                <span class="text-muted">@Localizer["Status"]</span>
                                <span>
                                    @switch (Model.OrderStatus)
                                    {
                                        case OrderStatus.Completed:
                                            <span class="badge bg-success">@Localizer["Completed"]</span>
                                            break;
                                        case OrderStatus.Cancelled:
                                            <span class="badge bg-danger">@Localizer["Cancelled"]</span>
                                            break;
                                        default:
                                            <span class="badge bg-warning">@Model.OrderStatus</span>
                                            break;
                                    }
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>