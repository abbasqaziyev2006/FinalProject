@using EcommerceCoza.BLL.ViewModels
@model FooterViewModel

<hr class="mt-5 text-secondary" />
<footer class="footer footer_type_2">
    <div class="footer-middle container">
        <div class="row row-cols-lg-5 row-cols-2">
            <div class="footer-column footer-store-info col-12 mb-4 mb-lg-0">
                <div class="logo">
                    <a asp-controller="Home" asp-action="Index">
                        <img src="~/assets/images/logo.png" alt="SurfsideMedia" class="logo__image d-block" />
                    </a>
                </div>

                @if (Model.Bio != null)
                {
                    <p class="footer-address">@Model.Bio.Address</p>
                    <p class="m-0"><strong class="fw-medium">@Model.Bio.Email</strong></p>
                    <p><strong class="fw-medium">@Model.Bio.Phone</strong></p>

                    @if (!string.IsNullOrEmpty(Model.Bio.LocationUrl))
                    {
                        <p>
                            <a href="@Model.Bio.LocationUrl" target="_blank" rel="noopener noreferrer" class="text-decoration-none">
                                <i class="fa fa-map-marker"></i> View Location
                            </a>
                        </p>
                    }
                }
                else
                {
                    <p class="footer-address">123 Beach Avenue, Surfside City, CA 00000</p>
                    <p class="m-0"><strong class="fw-medium">contact@surfsidemedia.in</strong></p>
                    <p><strong class="fw-medium">+1 000-000-0000</strong></p>
                }

                <ul class="social-links list-unstyled d-flex flex-wrap mb-0">
                    @if (Model.Socials != null && Model.Socials.Any())
                    {
                        @foreach (var social in Model.Socials)
                        {
                            <li>
                                <a href="@social.Url" class="footer__social-link d-block" target="_blank" rel="noopener noreferrer" title="@social.Name">
                                    <svg class="svg-icon svg-icon_@social.IconName.ToLower()" width="14" height="15" viewBox="0 0 14 15">
                                        <use href="#icon_@social.IconName.ToLower()" />
                                    </svg>
                                </a>
                            </li>
                        }
                    }
                </ul>
            </div>

            <div class="footer-column footer-menu mb-4 mb-lg-0">
                <h6 class="sub-menu__title text-uppercase">Company</h6>
                <ul class="sub-menu__list list-unstyled">
                    <li class="sub-menu__item"><a asp-controller="Home" asp-action="About" class="menu-link menu-link_us-s">About Us</a></li>
                    <li class="sub-menu__item"><a href="#" class="menu-link menu-link_us-s">Careers</a></li>
                    <li class="sub-menu__item"><a href="#" class="menu-link menu-link_us-s">Affiliates</a></li>
                    <li class="sub-menu__item"><a href="#" class="menu-link menu-link_us-s">Blog</a></li>
                    <li class="sub-menu__item"><a asp-controller="Home" asp-action="Contact" class="menu-link menu-link_us-s">Contact Us</a></li>
                </ul>
            </div>

            <div class="footer-column footer-menu mb-4 mb-lg-0">
                <h6 class="sub-menu__title text-uppercase">Shop</h6>
                <ul class="sub-menu__list list-unstyled">
                    <li class="sub-menu__item"><a asp-controller="Shop" asp-action="Index" class="menu-link menu-link_us-s">New Arrivals</a></li>
                    <li class="sub-menu__item"><a asp-controller="Shop" asp-action="Index" class="menu-link menu-link_us-s">Accessories</a></li>
                    <li class="sub-menu__item"><a asp-controller="Shop" asp-action="Index" class="menu-link menu-link_us-s">Men</a></li>
                    <li class="sub-menu__item"><a asp-controller="Shop" asp-action="Index" class="menu-link menu-link_us-s">Women</a></li>
                    <li class="sub-menu__item"><a asp-controller="Shop" asp-action="Index" class="menu-link menu-link_us-s">Shop All</a></li>
                </ul>
            </div>

            <div class="footer-column footer-menu mb-4 mb-lg-0">
                <h6 class="sub-menu__title text-uppercase">Help</h6>
                <ul class="sub-menu__list list-unstyled">
                    <li class="sub-menu__item"><a href="#" class="menu-link menu-link_us-s">Customer Service</a></li>
                    <li class="sub-menu__item"><a asp-controller="Account" asp-action="Index" class="menu-link menu-link_us-s">My Account</a></li>
                    <li class="sub-menu__item"><a href="#" class="menu-link menu-link_us-s">Find a Store</a></li>
                    <li class="sub-menu__item"><a href="#" class="menu-link menu-link_us-s">Legal & Privacy</a></li>
                    <li class="sub-menu__item"><a href="#" class="menu-link menu-link_us-s">Gift Card</a></li>
                </ul>
            </div>

            <div class="footer-column footer-menu mb-4 mb-lg-0">
                <h6 class="sub-menu__title text-uppercase">Categories</h6>
                <ul class="sub-menu__list list-unstyled">
                    <li class="sub-menu__item"><a asp-controller="Shop" asp-action="Index" class="menu-link menu-link_us-s">Shirts</a></li>
                    <li class="sub-menu__item"><a asp-controller="Shop" asp-action="Index" class="menu-link menu-link_us-s">Jeans</a></li>
                    <li class="sub-menu__item"><a asp-controller="Shop" asp-action="Index" class="menu-link menu-link_us-s">Shoes</a></li>
                    <li class="sub-menu__item"><a asp-controller="Shop" asp-action="Index" class="menu-link menu-link_us-s">Bags</a></li>
                    <li class="sub-menu__item"><a asp-controller="Shop" asp-action="Index" class="menu-link menu-link_us-s">Shop All</a></li>
                </ul>
            </div>
        </div>
    </div>

    <div class="footer-bottom">
        <div class="container d-md-flex align-items-center">
            <span class="footer-copyright me-auto">©@DateTime.Now.Year Surfside Media</span>
            <div class="footer-settings d-md-flex align-items-center">
                <a href="#">Privacy Policy</a> &nbsp;|&nbsp; <a href="#">Terms &amp; Conditions</a>
            </div>
        </div>
    </div>
</footer>

<!-- Mobile Footer -->
<footer class="footer-mobile container w-100 px-5 d-md-none bg-body">
    <div class="row text-center">
        <div class="col-4">
            <a asp-controller="Home" asp-action="Index" class="footer-mobile__link d-flex flex-column align-items-center">
                <svg class="d-block" width="18" height="18" viewBox="0 0 18 18" fill="none">
                    <use href="#icon_home" />
                </svg>
                <span>Home</span>
            </a>
        </div>
        <div class="col-4">
            <a asp-controller="Shop" asp-action="Index" class="footer-mobile__link d-flex flex-column align-items-center">
                <svg class="d-block" width="18" height="18" viewBox="0 0 18 18" fill="none">
                    <use href="#icon_hanger" />
                </svg>
                <span>Shop</span>
            </a>
        </div>
        <div class="col-4">
            <a asp-controller="Wishlist" asp-action="Index" class="footer-mobile__link d-flex flex-column align-items-center">
                <div class="position-relative">
                    <svg class="d-block" width="18" height="18" viewBox="0 0 20 20" fill="none">
                        <use href="#icon_heart" />
                    </svg>
                    <span class="wishlist-amount d-block position-absolute js-wishlist-count">3</span>
                </div>
                <span>Wishlist</span>
            </a>
        </div>
    </div>
</footer>

